---
// Sezione Servizi Elegante
// Layout verticale con cards grandi e raffinate
import { Icon } from "astro-icon/components";

const services = [
    {
        number: "01",
        icon: "lucide:calendar",
        title: "Coordinamento",
        subtitle: "Il Giorno Perfetto",
        description:
            "Gestione completa del vostro matrimonio dal mattino alla sera. Sarò presente in ogni momento per garantire che tutto fluisca perfettamente, permettendovi di vivere ogni istante senza preoccupazioni.",
        features: [
            "Gestione timeline completa",
            "Coordinamento fornitori",
            "Assistenza sposi e invitati",
            "Problem solving in tempo reale",
        ],
    },
    {
        number: "02",
        icon: "lucide:sparkles",
        title: "Wedding Totale",
        subtitle: "Dall'Idea alla Realtà",
        description:
            "Pianificazione completa dall'inizio alla fine. Dalla scelta della location alla selezione di ogni dettaglio, creeremo insieme il matrimonio dei vostri sogni con eleganza e raffinatezza.",
        features: [
            "Concept e design completo",
            "Selezione e gestione fornitori",
            "Budget planning e controllo",
            "Coordinamento giorno delle nozze",
        ],
    },
    {
        number: "03",
        icon: "lucide:message-circle",
        title: "Consulenza su Misura",
        subtitle: "Il Vostro Supporto Personale",
        description:
            "Supporto mirato per specifiche esigenze. Dalla scelta della location ai consigli su stile, budget e fornitori. Un aiuto professionale quando ne avete bisogno.",
        features: [
            "Sessioni di consulenza dedicate",
            "Ricerca e selezione location",
            "Consigli su stile e tendenze",
            "Gestione budget ottimizzata",
        ],
    },
];
---

<section class="py-24 lg:py-32 bg-[#F8F7F4]">
    <div class="container mx-auto px-8 lg:px-16">
        <!-- Header -->
        <div class="max-w-3xl mb-20 fade-in">
            <div class="flex items-center mb-6">
                <div class="w-16 h-px bg-[#7d8b6e]"></div>
                <span
                    class="ml-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
                >
                    I Nostri Servizi
                </span>
            </div>
            <h2
                class="text-4xl md:text-5xl lg:text-6xl font-light text-gray-900 mb-6 leading-tight"
            >
                Soluzioni <span class="text-[#7d8b6e] italic">Raffinate</span>
                <br />per Ogni Esigenza
            </h2>
            <p class="text-lg font-light text-gray-600 leading-relaxed">
                Ogni servizio è personalizzato per riflettere la vostra visione
                e creare un'esperienza unica e memorabile.
            </p>
        </div>

        <!-- Services List - Layout Verticale Elegante -->
        <div class="max-w-5xl mx-auto space-y-16 lg:space-y-24">
            {
                services.map((service, index) => (
                    <div
                        class={`fade-in fade-in-delay-${index + 1} group`}
                    >
                        <div class="grid lg:grid-cols-12 gap-8 lg:gap-12">
                            <!-- Colonna Sinistra - Numero e Icona -->
                            <div class="lg:col-span-4">
                                <div class="sticky top-8">
                                    <!-- Numero decorativo grande -->
                                    <div class="relative mb-8">
                                        <div class="text-[180px] lg:text-[220px] font-light text-[#7d8b6e]/5 leading-none">
                                            {service.number}
                                        </div>
                                        <!-- Icona centrata sul numero -->
                                        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
                                            <div class="w-20 h-20 flex items-center justify-center bg-white rounded-full shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                                                <Icon
                                                    name={service.icon}
                                                    class="w-10 h-10 text-[#7d8b6e] group-hover:scale-110 transition-transform duration-300"
                                                />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Separatore mobile -->
                                    <div class="flex items-center mb-6 lg:hidden">
                                        <div class="w-12 h-px bg-[#7d8b6e]" />
                                        <div class="mx-3 w-1 h-1 rounded-full bg-[#7d8b6e]" />
                                        <div class="flex-1 h-px bg-[#7d8b6e]" />
                                    </div>
                                </div>
                            </div>

                            <!-- Colonna Destra - Contenuto -->
                            <div class="lg:col-span-8">
                                <!-- Titolo e Subtitle -->
                                <div class="mb-6">
                                    <h3 class="text-3xl md:text-4xl font-light text-gray-900 mb-2">
                                        {service.title}
                                    </h3>
                                    <p class="text-lg font-light text-[#7d8b6e] italic">
                                        {service.subtitle}
                                    </p>
                                </div>

                                <!-- Separatore -->
                                <div class="flex items-center mb-8">
                                    <div class="w-16 h-px bg-[#7d8b6e]" />
                                    <div class="mx-3 w-1 h-1 rounded-full bg-[#7d8b6e]" />
                                    <div class="w-16 h-px bg-[#7d8b6e]" />
                                </div>

                                <!-- Descrizione -->
                                <p class="text-base font-light text-gray-600 leading-relaxed mb-8">
                                    {service.description}
                                </p>

                                <!-- Features List -->
                                <div class="space-y-4 mb-8">
                                    {service.features.map((feature) => (
                                        <div class="flex items-start">
                                            <div class="flex-shrink-0 w-6 h-6 flex items-center justify-center">
                                                <div class="w-1.5 h-1.5 rounded-full bg-[#7d8b6e]" />
                                            </div>
                                            <span class="text-sm font-light text-gray-600 ml-3">
                                                {feature}
                                            </span>
                                        </div>
                                    ))}
                                </div>

                                <!-- Link elegante -->
                                <a
                                    href="#contatti"
                                    class="inline-flex items-center group/link text-gray-900 font-light text-sm tracking-wider uppercase hover:text-[#7d8b6e] transition-colors duration-300"
                                >
                                    <span>Richiedi Informazioni</span>
                                    <svg
                                        class="w-5 h-5 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"
                                        />
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Separatore tra servizi -->
                        {index < services.length - 1 && (
                            <div class="mt-16 lg:mt-24 flex items-center justify-center">
                                <div class="w-24 h-px bg-[#7d8b6e]/30" />
                                <div class="mx-4 w-1.5 h-1.5 rounded-full bg-[#7d8b6e]/30" />
                                <div class="w-24 h-px bg-[#7d8b6e]/30" />
                            </div>
                        )}
                    </div>
                ))
            }
        </div>

        <!-- CTA Finale -->
        <div class="mt-24 lg:mt-32 text-center max-w-3xl mx-auto fade-in fade-in-delay-4">
            <div class="bg-white p-12 lg:p-16 shadow-lg">
                <div class="flex items-center justify-center mb-8">
                    <div class="w-16 h-px bg-[#7d8b6e]"></div>
                    <div class="mx-4 w-1 h-1 rounded-full bg-[#7d8b6e]"></div>
                    <div class="w-16 h-px bg-[#7d8b6e]"></div>
                </div>

                <h3
                    class="text-2xl md:text-3xl font-light text-gray-900 mb-4"
                >
                    Hai bisogno di un servizio personalizzato?
                </h3>
                <p class="text-base font-light text-gray-600 mb-8 leading-relaxed">
                    Ogni matrimonio è unico. Creiamo insieme un pacchetto su
                    misura per le vostre esigenze specifiche.
                </p>

                <a
                    href="#contatti"
                    class="inline-flex items-center justify-center px-10 py-4 bg-[#7d8b6e] text-white text-sm font-light tracking-wider uppercase hover:bg-[#6d7a5e] transition-all duration-300"
                >
                    Parliamone Insieme
                </a>
            </div>
        </div>
    </div>
</section>

