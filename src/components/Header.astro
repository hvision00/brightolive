---
// Header minimalista ed elegante
interface Props {
  currentPage?: string;
}

const { currentPage = "/" } = Astro.props;
---

<header class="py-6 px-4 lg:px-8">
  <nav
    x-data="{ mobileMenuOpen: false, currentLang: 'IT' }"
    class="container mx-auto"
  >
    <div class="flex items-center justify-between">
      <!-- Logo a sinistra -->
      <a href="/" class="flex-shrink-0">
        <img src="/logo.png" alt="BrightOlive Logo" class="h-10 w-auto" />
      </a>

      <!-- Menu centrale - Desktop -->
      <div class="hidden lg:flex items-center space-x-12">
        <a
          href="/"
          class:list={[
            "text-sm font-light tracking-wide transition-colors duration-200",
            currentPage === "/"
              ? "text-[#7d8b6e]"
              : "text-gray-700 hover:text-[#7d8b6e]",
          ]}
        >
          Minimale
        </a>
        <a
          href="/elegante"
          class:list={[
            "text-sm font-light tracking-wide transition-colors duration-200",
            currentPage === "/elegante"
              ? "text-[#7d8b6e]"
              : "text-gray-700 hover:text-[#7d8b6e]",
          ]}
        >
          Elegante
        </a>
      </div>

      <!-- Selettore lingua a destra - Desktop -->
      <div class="hidden lg:flex items-center space-x-2">
        <button
          @click="currentLang = 'IT'"
          :class="currentLang === 'IT' ? 'bg-[#7d8b6e] text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'"
          class="px-4 py-2 text-sm font-medium rounded-md transition-all duration-200"
        >
          IT
        </button>
        <button
          @click="currentLang = 'EN'"
          :class="currentLang === 'EN' ? 'bg-[#7d8b6e] text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'"
          class="px-4 py-2 text-sm font-medium rounded-md transition-all duration-200"
        >
          EN
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button
        @click="mobileMenuOpen = !mobileMenuOpen"
        class="lg:hidden text-gray-700 focus:outline-none p-2"
        aria-label="Toggle menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            x-show="!mobileMenuOpen"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
          <path
            x-show="mobileMenuOpen"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div
      x-show="mobileMenuOpen"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 transform -translate-y-2"
      x-transition:enter-end="opacity-100 transform translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 transform translate-y-0"
      x-transition:leave-end="opacity-0 transform -translate-y-2"
      class="lg:hidden mt-6 pb-4 border-t border-gray-100 pt-6"
    >
      <div class="flex flex-col space-y-4">
        <a
          href="/"
          class="text-gray-700 hover:text-[#7d8b6e] text-sm font-light tracking-wide transition-colors"
        >
          Minimale
        </a>
        <a
          href="/elegante"
          class="text-gray-700 hover:text-[#7d8b6e] text-sm font-light tracking-wide transition-colors"
        >
          Elegante
        </a>

        <!-- Selettore lingua mobile -->
        <div class="flex items-center space-x-2 pt-4">
          <button
            @click="currentLang = 'IT'"
            :class="currentLang === 'IT' ? 'bg-[#7d8b6e] text-white' : 'bg-gray-100 text-gray-600'"
            class="flex-1 px-4 py-2 text-sm font-medium rounded-md transition-all duration-200"
          >
            IT
          </button>
          <button
            @click="currentLang = 'EN'"
            :class="currentLang === 'EN' ? 'bg-[#7d8b6e] text-white' : 'bg-gray-100 text-gray-600'"
            class="flex-1 px-4 py-2 text-sm font-medium rounded-md transition-all duration-200"
          >
            EN
          </button>
        </div>
      </div>
    </div>
  </nav>
</header>
