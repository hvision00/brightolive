---
// Header minimalista ed elegante
// Rileva la lingua dall'URL
const currentPath = Astro.url.pathname;
const currentLang = currentPath.startsWith("/en")
  ? "en"
  : currentPath.startsWith("/es")
    ? "es"
    : "it";
---

<header class="py-6 px-4 lg:px-8">
  <nav
    x-data={`{ mobileMenuOpen: false, currentLang: '${currentLang}' }`}
    class="container mx-auto"
  >
    <div class="flex items-center justify-between">
      <!-- Logo a sinistra - PIÃ™ GRANDE -->
      <a href="/" class="flex-shrink-0">
        <img
          src="/logo.png"
          alt="BrightOlive Logo"
          class="h-16 lg:h-20 w-auto"
        />
      </a>

      <!-- Selettore lingua a destra - Desktop -->
      <div class="hidden lg:flex items-center space-x-2">
        <a
          href="/"
          class:list={[
            "px-4 py-2 text-sm font-medium rounded-md transition-all duration-200",
            currentLang === "it"
              ? "bg-[#7d8b6e] text-white"
              : "bg-gray-100 text-gray-600 hover:bg-gray-200",
          ]}
        >
          IT
        </a>
        <a
          href="/en/"
          class:list={[
            "px-4 py-2 text-sm font-medium rounded-md transition-all duration-200",
            currentLang === "en"
              ? "bg-[#7d8b6e] text-white"
              : "bg-gray-100 text-gray-600 hover:bg-gray-200",
          ]}
        >
          EN
        </a>
        <a
          href="/es/"
          class:list={[
            "px-4 py-2 text-sm font-medium rounded-md transition-all duration-200",
            currentLang === "es"
              ? "bg-[#7d8b6e] text-white"
              : "bg-gray-100 text-gray-600 hover:bg-gray-200",
          ]}
        >
          ES
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        @click="mobileMenuOpen = !mobileMenuOpen"
        class="lg:hidden text-gray-700 focus:outline-none p-2"
        aria-label="Toggle menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            x-show="!mobileMenuOpen"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
          <path
            x-show="mobileMenuOpen"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div
      x-show="mobileMenuOpen"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 transform -translate-y-2"
      x-transition:enter-end="opacity-100 transform translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 transform translate-y-0"
      x-transition:leave-end="opacity-0 transform -translate-y-2"
      class="lg:hidden mt-6 pb-4 border-t border-gray-100 pt-6"
    >
      <!-- Selettore lingua mobile -->
      <div class="flex items-center space-x-2">
        <a
          href="/"
          class:list={[
            "flex-1 px-4 py-2 text-sm font-medium rounded-md transition-all duration-200 text-center",
            currentLang === "it"
              ? "bg-[#7d8b6e] text-white"
              : "bg-gray-100 text-gray-600",
          ]}
        >
          IT
        </a>
        <a
          href="/en/"
          class:list={[
            "flex-1 px-4 py-2 text-sm font-medium rounded-md transition-all duration-200 text-center",
            currentLang === "en"
              ? "bg-[#7d8b6e] text-white"
              : "bg-gray-100 text-gray-600",
          ]}
        >
          EN
        </a>
        <a
          href="/es/"
          class:list={[
            "flex-1 px-4 py-2 text-sm font-medium rounded-md transition-all duration-200 text-center",
            currentLang === "es"
              ? "bg-[#7d8b6e] text-white"
              : "bg-gray-100 text-gray-600",
          ]}
        >
          ES
        </a>
      </div>
    </div>
  </nav>
</header>
