---
// Header minimalista ed elegante
// Rileva la lingua dall'URL
const currentPath = Astro.url.pathname;
const currentLang = currentPath.startsWith("/en")
  ? "en"
  : currentPath.startsWith("/es")
    ? "es"
    : "it";

// Funzione per ottenere il path senza prefisso lingua
function getCleanPath(path: string): string {
  if (path.startsWith("/en/")) return path.substring(3);
  if (path.startsWith("/es/")) return path.substring(3);
  return path;
}

// Funzione per ottenere l'URL nella lingua specificata
function getLangUrl(targetLang: string): string {
  const cleanPath = getCleanPath(currentPath);
  if (targetLang === "it") {
    return cleanPath || "/";
  }
  return `/${targetLang}${cleanPath}`;
}

// Prefisso per i link del menu
const langPrefix = currentLang === "it" ? "" : `/${currentLang}`;
---

<header class="py-6 px-4 lg:px-8">
  <nav
    x-data={`{ mobileMenuOpen: false, currentLang: '${currentLang}' }`}
    class="container mx-auto"
  >
    <div class="flex items-center justify-between">
      <!-- Logo a sinistra - PIÃ™ GRANDE -->
      <a href={langPrefix + "/"} class="shrink-0">
        <img
          src="/logo.png"
          alt="BrightOlive Logo"
          class="h-16 lg:h-20 w-auto"
        />
      </a>

      <!-- Menu centrale - Desktop -->
      <div class="hidden lg:flex items-center space-x-8">
        <a
          href={langPrefix + "/"}
          class="text-sm font-light tracking-wide text-gray-700 hover:text-primary transition-colors duration-200"
        >
          Home
        </a>
        <a
          href={langPrefix + "/chi-siamo"}
          class="text-sm font-light tracking-wide text-gray-700 hover:text-primary transition-colors duration-200"
        >
          Chi Sono
        </a>
        <a
          href={langPrefix + "/servizi"}
          class="text-sm font-light tracking-wide text-gray-700 hover:text-primary transition-colors duration-200"
        >
          Servizi
        </a>
        <a
          href={langPrefix + "/destination-wedding"}
          class="text-sm font-light tracking-wide text-gray-700 hover:text-primary transition-colors duration-200"
        >
          Destination Wedding
        </a>
        <a
          href={langPrefix + "/blog"}
          class="text-sm font-light tracking-wide text-gray-700 hover:text-primary transition-colors duration-200"
        >
          Blog
        </a>
        <a
          href={langPrefix + "/galleria"}
          class="text-sm font-light tracking-wide text-gray-700 hover:text-primary transition-colors duration-200"
        >
          Galleria
        </a>
        <a
          href={langPrefix + "/contatti"}
          class="text-sm font-light tracking-wide text-gray-700 hover:text-primary transition-colors duration-200"
        >
          Contatti
        </a>
      </div>

      <!-- Selettore lingua a destra - Desktop -->
      <div class="hidden lg:flex items-center space-x-2">
        <a
          href={getLangUrl("it")}
          class:list={[
            "px-4 py-2 text-sm font-medium rounded-md transition-all duration-200",
            currentLang === "it"
              ? "bg-primary text-white"
              : "bg-gray-100 text-gray-600 hover:bg-gray-200",
          ]}
        >
          IT
        </a>
        <a
          href={getLangUrl("en")}
          class:list={[
            "px-4 py-2 text-sm font-medium rounded-md transition-all duration-200",
            currentLang === "en"
              ? "bg-primary text-white"
              : "bg-gray-100 text-gray-600 hover:bg-gray-200",
          ]}
        >
          EN
        </a>
        <a
          href={getLangUrl("es")}
          class:list={[
            "px-4 py-2 text-sm font-medium rounded-md transition-all duration-200",
            currentLang === "es"
              ? "bg-primary text-white"
              : "bg-gray-100 text-gray-600 hover:bg-gray-200",
          ]}
        >
          ES
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        @click="mobileMenuOpen = !mobileMenuOpen"
        class="lg:hidden text-gray-700 focus:outline-none p-2"
        aria-label="Toggle menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            x-show="!mobileMenuOpen"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
          <path
            x-show="mobileMenuOpen"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div
      x-show="mobileMenuOpen"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 transform -translate-y-2"
      x-transition:enter-end="opacity-100 transform translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 transform translate-y-0"
      x-transition:leave-end="opacity-0 transform -translate-y-2"
      class="lg:hidden mt-6 pb-4 border-t border-gray-100 pt-6"
    >
      <!-- Menu mobile -->
      <div class="flex flex-col space-y-4 mb-6">
        <a
          href={langPrefix + "/"}
          class="text-gray-700 hover:text-primary text-sm font-light tracking-wide transition-colors"
        >
          Home
        </a>
        <a
          href={langPrefix + "/chi-siamo"}
          class="text-gray-700 hover:text-primary text-sm font-light tracking-wide transition-colors"
        >
          Chi Sono
        </a>
        <a
          href={langPrefix + "/servizi"}
          class="text-gray-700 hover:text-primary text-sm font-light tracking-wide transition-colors"
        >
          Servizi
        </a>
        <a
          href={langPrefix + "/destination-wedding"}
          class="text-gray-700 hover:text-primary text-sm font-light tracking-wide transition-colors"
        >
          Destination Wedding
        </a>
        <a
          href={langPrefix + "/blog"}
          class="text-gray-700 hover:text-primary text-sm font-light tracking-wide transition-colors"
        >
          Blog
        </a>
        <a
          href={langPrefix + "/galleria"}
          class="text-gray-700 hover:text-primary text-sm font-light tracking-wide transition-colors"
        >
          Galleria
        </a>
        <a
          href={langPrefix + "/contatti"}
          class="text-gray-700 hover:text-primary text-sm font-light tracking-wide transition-colors"
        >
          Contatti
        </a>
      </div>

      <!-- Selettore lingua mobile -->
      <div class="flex items-center space-x-2">
        <a
          href={getLangUrl("it")}
          class:list={[
            "flex-1 px-4 py-2 text-sm font-medium rounded-md transition-all duration-200 text-center",
            currentLang === "it"
              ? "bg-primary text-white"
              : "bg-gray-100 text-gray-600",
          ]}
        >
          IT
        </a>
        <a
          href={getLangUrl("en")}
          class:list={[
            "flex-1 px-4 py-2 text-sm font-medium rounded-md transition-all duration-200 text-center",
            currentLang === "en"
              ? "bg-primary text-white"
              : "bg-gray-100 text-gray-600",
          ]}
        >
          EN
        </a>
        <a
          href={getLangUrl("es")}
          class:list={[
            "flex-1 px-4 py-2 text-sm font-medium rounded-md transition-all duration-200 text-center",
            currentLang === "es"
              ? "bg-primary text-white"
              : "bg-gray-100 text-gray-600",
          ]}
        >
          ES
        </a>
      </div>
    </div>
  </nav>
</header>
