---
// Sezione Impact con design wow
---

<section class="relative bg-[#7d8b6e] overflow-hidden">
    <!-- Separatore Ondulato Top -->
    <div class="absolute top-0 left-0 w-full overflow-hidden leading-[0]">
        <svg
            class="relative block w-full h-[60px] md:h-[80px]"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                d="M0,0 C150,100 350,0 600,50 C850,100 1050,0 1200,50 L1200,0 L0,0 Z"
                class="fill-white"></path>
        </svg>
    </div>

    <!-- Contenuto -->
    <div class="relative py-32 lg:py-40 px-8 lg:px-16">
        <div class="container mx-auto max-w-5xl">
            <!-- Decorazione sottile sopra -->
            <div class="flex justify-center mb-12">
                <div class="flex items-center space-x-3">
                    <div class="w-12 h-[1px] bg-white/40"></div>
                    <div class="w-2 h-2 rounded-full bg-white/60"></div>
                    <div class="w-12 h-[1px] bg-white/40"></div>
                </div>
            </div>

            <!-- Testo principale -->
            <div class="text-center space-y-8 fade-in">
                <p
                    class="text-2xl md:text-3xl lg:text-4xl font-light leading-relaxed text-white tracking-wide"
                    style="text-shadow: 0 2px 20px rgba(0,0,0,0.1);"
                >
                    <span class="block mb-6 animate-fade-in">
                        Empatia e presenza per sposi e invitati.
                    </span>
                    <span
                        class="block mb-6 animate-fade-in"
                        style="animation-delay: 0.2s;"
                    >
                        Matrimoni ricordati per momenti, non solo foto.
                    </span>
                    <span
                        class="block mb-6 animate-fade-in"
                        style="animation-delay: 0.4s;"
                    >
                        Fornitori selezionati per ogni bisogno.
                    </span>
                    <span
                        class="block animate-fade-in"
                        style="animation-delay: 0.6s;"
                    >
                        Un'esperienza che resta nel cuore, oltre le immagini.
                    </span>
                </p>
            </div>

            <!-- Decorazione sottile sotto -->
            <div class="flex justify-center mt-12">
                <div class="flex items-center space-x-3">
                    <div class="w-12 h-[1px] bg-white/40"></div>
                    <div class="w-2 h-2 rounded-full bg-white/60"></div>
                    <div class="w-12 h-[1px] bg-white/40"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Separatore Ondulato Bottom -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0]">
        <svg
            class="relative block w-full h-[60px] md:h-[80px]"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                d="M0,50 C150,0 350,100 600,50 C850,0 1050,100 1200,50 L1200,120 L0,120 Z"
                class="fill-white"></path>
        </svg>
    </div>

    <!-- Pattern sottile di sfondo -->
    <div class="absolute inset-0 opacity-5">
        <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
            <defs>
                <pattern
                    id="dots"
                    x="0"
                    y="0"
                    width="60"
                    height="60"
                    patternUnits="userSpaceOnUse"
                >
                    <circle cx="30" cy="30" r="1.5" fill="white"></circle>
                </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#dots)"></rect>
        </svg>
    </div>
</section>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 1s ease-out forwards;
        opacity: 0;
    }
</style>
