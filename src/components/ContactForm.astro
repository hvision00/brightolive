---
// Contact Form Elegante - Design raffinato e sofisticato
import { getTranslation, type Language } from "../i18n/translations";

interface Props {
    lang?: Language;
}

const { lang = "it" } = Astro.props;
const t = (key: any) => getTranslation(lang, key);

// Prefisso per i link
const langPrefix = lang === "it" ? "" : `/${lang}`;

// I nomi dei servizi vanno tradotti
const services = [
    t("service_1_title"),
    t("service_2_title"),
    t("service_3_title"),
];
---

<section id="contatti" class="py-24 lg:py-32 bg-neutral">
    <div class="container mx-auto px-8 lg:px-16">
        <div class="grid lg:grid-cols-12 gap-12 lg:gap-16 max-w-7xl mx-auto">
            <!-- Colonna Sinistra - Intro -->
            <div class="lg:col-span-5 fade-in">
                <!-- Numero decorativo -->
                <div
                    class="text-[180px] lg:text-[220px] font-light text-primary/5 leading-none mb-[-80px]"
                    style="font-variant-numeric: oldstyle-nums;"
                >
                    00
                </div>

                <div class="flex items-center mb-6">
                    <div class="w-16 h-px bg-primary"></div>
                    <span
                        class="ml-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
                    >
                        {t("contact_label")}
                    </span>
                </div>

                <h2
                    class="text-4xl md:text-5xl lg:text-6xl font-light text-gray-900 mb-6 leading-tight"
                >
                    {t("contact_title_1")}
                    <br />
                    <span class="text-primary italic"
                        >{t("contact_title_2")}</span
                    >
                </h2>

                <p
                    class="text-lg font-light text-gray-600 leading-relaxed mb-8"
                >
                    {t("contact_description")}
                </p>

                <!-- Info contatto -->
                <div class="space-y-4 pt-8 border-t border-gray-300">
                    <div class="flex items-center text-gray-600">
                        <svg
                            class="w-5 h-5 mr-3 text-primary"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <span class="font-light">info@brightolive.com</span>
                    </div>
                    <div class="flex items-center text-gray-600">
                        <svg
                            class="w-5 h-5 mr-3 text-primary"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path>
                        </svg>
                        <span class="font-light">+39 123 456 7890</span>
                    </div>
                </div>
            </div>

            <!-- Colonna Destra - Form -->
            <div class="lg:col-span-7 fade-in fade-in-delay-1">
                <div class="bg-white p-8 lg:p-12 shadow-lg">
                    <div
                        x-data="{ 
                            formData: {
                                nome: '',
                                email: '',
                                servizio: '',
                                data: '',
                                messaggio: '',
                                privacy: false
                            },
                            isSubmitting: false,
                            showSuccess: false,
                            async submitForm() {
                                this.isSubmitting = true;
                                await new Promise(resolve => setTimeout(resolve, 1500));
                                this.isSubmitting = false;
                                this.showSuccess = true;
                                setTimeout(() => {
                                    this.formData = {
                                        nome: '',
                                        email: '',
                                        servizio: '',
                                        data: '',
                                        messaggio: '',
                                        privacy: false
                                    };
                                    this.showSuccess = false;
                                }, 5000);
                            }
                        }"
                    >
                        <!-- Messaggio Successo -->
                        <div
                            x-show="showSuccess"
                            x-transition
                            class="mb-6 p-4 bg-primary text-white"
                        >
                            <div class="flex items-start">
                                <svg
                                    class="w-5 h-5 mr-3 shrink-0 mt-0.5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path>
                                </svg>
                                <div>
                                    <p class="font-light text-sm">
                                        {t("contact_form_success")}
                                    </p>
                                </div>
                            </div>
                        </div>

                        <form
                            @submit.prevent="submitForm()"
                            class="space-y-6"
                            :class="{ 'opacity-50 pointer-events-none': isSubmitting }"
                        >
                            <!-- Nome -->
                            <div>
                                <label
                                    for="nome"
                                    class="block text-sm font-light text-gray-700 mb-2 tracking-wide"
                                >
                                    {t("contact_form_name")}
                                    <span class="text-primary">*</span>
                                </label>
                                <input
                                    type="text"
                                    id="nome"
                                    x-model="formData.nome"
                                    required
                                    class="w-full px-4 py-3 bg-neutral border-b-2 border-gray-300 focus:border-primary focus:bg-white outline-none transition-all font-light"
                                    placeholder="Mario Rossi"
                                />
                            </div>

                            <!-- Email e Servizio -->
                            <div class="grid md:grid-cols-2 gap-6">
                                <div>
                                    <label
                                        for="email"
                                        class="block text-sm font-light text-gray-700 mb-2 tracking-wide"
                                    >
                                        {t("contact_form_email")}
                                        <span class="text-primary">*</span>
                                    </label>
                                    <input
                                        type="email"
                                        id="email"
                                        x-model="formData.email"
                                        required
                                        class="w-full px-4 py-3 bg-neutral border-b-2 border-gray-300 focus:border-primary focus:bg-white outline-none transition-all font-light"
                                        placeholder="email@esempio.com"
                                    />
                                </div>

                                <div>
                                    <label
                                        for="servizio"
                                        class="block text-sm font-light text-gray-700 mb-2 tracking-wide"
                                    >
                                        {t("contact_form_service")}
                                        <span class="text-primary">*</span>
                                    </label>
                                    <select
                                        id="servizio"
                                        x-model="formData.servizio"
                                        required
                                        class="w-full px-4 py-3 bg-neutral border-b-2 border-gray-300 focus:border-primary focus:bg-white outline-none transition-all font-light"
                                    >
                                        <option value="" disabled selected
                                            >{
                                                t(
                                                    "contact_form_service_placeholder",
                                                )
                                            }</option
                                        >
                                        {
                                            services.map((service) => (
                                                <option value={service}>
                                                    {service}
                                                </option>
                                            ))
                                        }
                                    </select>
                                </div>
                            </div>

                            <!-- Data -->
                            <div>
                                <label
                                    for="data"
                                    class="block text-sm font-light text-gray-700 mb-2 tracking-wide"
                                >
                                    {t("contact_form_date")}
                                    <span class="text-primary">*</span>
                                </label>
                                <input
                                    type="date"
                                    id="data"
                                    x-model="formData.data"
                                    required
                                    class="w-full px-4 py-3 bg-neutral border-b-2 border-gray-300 focus:border-primary focus:bg-white outline-none transition-all font-light"
                                />
                            </div>

                            <!-- Messaggio -->
                            <div>
                                <label
                                    for="messaggio"
                                    class="block text-sm font-light text-gray-700 mb-2 tracking-wide"
                                >
                                    {t("contact_form_message")}
                                    <span class="text-primary">*</span>
                                </label>
                                <textarea
                                    id="messaggio"
                                    x-model="formData.messaggio"
                                    required
                                    rows="5"
                                    class="w-full px-4 py-3 bg-neutral border-b-2 border-gray-300 focus:border-primary focus:bg-white outline-none transition-all font-light resize-none"
                                    placeholder={t(
                                        "contact_form_message_placeholder",
                                    )}></textarea>
                            </div>

                            <!-- Privacy -->
                            <div class="flex items-start pt-2">
                                <input
                                    type="checkbox"
                                    id="privacy"
                                    x-model="formData.privacy"
                                    required
                                    class="mt-1 w-4 h-4 border-gray-300 text-primary focus:ring-primary cursor-pointer"
                                />
                                <label
                                    for="privacy"
                                    class="ml-3 text-sm font-light text-gray-600 leading-relaxed cursor-pointer"
                                >
                                    {t("contact_form_privacy")}
                                    <a
                                        href={langPrefix + "/privacy"}
                                        class="text-primary hover:underline"
                                        >{t("contact_form_privacy_link")}</a
                                    >. *
                                </label>
                            </div>

                            <!-- Submit Button -->
                            <div class="pt-4">
                                <button
                                    type="submit"
                                    class="w-full px-8 py-4 bg-primary text-white font-light tracking-wider uppercase hover:bg-secondary transition-all duration-300 disabled:opacity-50"
                                    :disabled="!formData.privacy || isSubmitting"
                                >
                                    <span x-show="!isSubmitting"
                                        >{t("contact_form_submit")}</span
                                    >
                                    <span
                                        x-show="isSubmitting"
                                        class="flex items-center justify-center"
                                    >
                                        <svg
                                            class="animate-spin h-5 w-5 mr-3"
                                            xmlns="http://www.w3.org/2000/svg"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                        >
                                            <circle
                                                class="opacity-25"
                                                cx="12"
                                                cy="12"
                                                r="10"
                                                stroke="currentColor"
                                                stroke-width="4"></circle>
                                            <path
                                                class="opacity-75"
                                                fill="currentColor"
                                                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                                            ></path>
                                        </svg>
                                        {t("contact_form_submitting")}
                                    </span>
                                </button>
                            </div>

                            <p class="text-xs font-light text-gray-500 italic">
                                {t("contact_form_required")}
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
