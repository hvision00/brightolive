---
// Sezione Destination Wedding Elegante
// Layout alternato magazine-style completamente diverso
import { getTranslation, type Language } from "../i18n/translations";

interface Props {
    lang?: Language;
}

const { lang = "it" } = Astro.props;
const t = (key: any) => getTranslation(lang, key);

const destinations = [
    {
        number: "01",
        nameKey: "destination_dolomiti_name",
        subtitleKey: "destination_dolomiti_subtitle",
        descriptionKey: "destination_dolomiti_description",
        image: "/destinations/dolomiti.jpg",
        detailsKey: "destination_dolomiti_details",
    },
    {
        number: "02",
        nameKey: "destination_bassano_name",
        subtitleKey: "destination_bassano_subtitle",
        descriptionKey: "destination_bassano_description",
        image: "/destinations/bassano.jpg",
        detailsKey: "destination_bassano_details",
    },
    {
        number: "03",
        nameKey: "destination_venezia_name",
        subtitleKey: "destination_venezia_subtitle",
        descriptionKey: "destination_venezia_description",
        image: "/destinations/venezia.jpg",
        detailsKey: "destination_venezia_details",
    },
    {
        number: "04",
        nameKey: "destination_padova_name",
        subtitleKey: "destination_padova_subtitle",
        descriptionKey: "destination_padova_description",
        image: "/destinations/padova.jpg",
        detailsKey: "destination_padova_details",
    },
    {
        number: "05",
        nameKey: "destination_prosecco_name",
        subtitleKey: "destination_prosecco_subtitle",
        descriptionKey: "destination_prosecco_description",
        image: "/destinations/prosecco.jpg",
        detailsKey: "destination_prosecco_details",
    },
];
---

<section class="py-24 lg:py-32 bg-white">
    <div class="container mx-auto px-8 lg:px-16">
        <!-- Header Section -->
        <div class="max-w-3xl mb-20 fade-in">
            <div class="flex items-center mb-6">
                <div class="w-16 h-px bg-[#7d8b6e]"></div>
                <span
                    class="ml-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
                >
                    {t("destinations_label")}
                </span>
            </div>
            <h2
                class="text-4xl md:text-5xl lg:text-6xl font-light text-gray-900 mb-6 leading-tight"
            >
                {t("destinations_title_1")} <br />
                <span class="text-[#7d8b6e] italic">{t("destinations_title_2")}</span>
            </h2>
            <p class="text-lg font-light text-gray-600 leading-relaxed">
                {t("destinations_description")}
            </p>
        </div>

        <!-- Destinations List - Layout Alternato -->
        <div class="space-y-24 lg:space-y-32">
            {
                destinations.map((destination, index) => (
                    <div
                        class={`fade-in fade-in-delay-${Math.min(index + 1, 5)}`}
                    >
                        <div
                            class={`grid lg:grid-cols-12 gap-8 lg:gap-16 items-center ${
                                index % 2 === 0 ? "" : "lg:direction-rtl"
                            }`}
                        >
                            <!-- Immagine -->
                            <div
                                class={`lg:col-span-7 relative group ${
                                    index % 2 === 0
                                        ? "lg:order-1"
                                        : "lg:order-2"
                                }`}
                            >
                                <div class="relative h-[60vh] lg:h-[70vh] overflow-hidden">
                                    <img
                                        src={destination.image}
                                        alt={t(destination.nameKey)}
                                        class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                                    />
                                    <!-- Overlay gradient -->
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />

                                    <!-- Numero decorativo sulla foto -->
                                    <div class="absolute top-8 left-8 text-white/20 text-8xl font-light leading-none">
                                        {destination.number}
                                    </div>
                                </div>

                                <!-- Linea decorativa -->
                                <div
                                    class={`absolute top-0 ${
                                        index % 2 === 0
                                            ? "right-0 lg:right-[-2rem]"
                                            : "left-0 lg:left-[-2rem]"
                                    } w-px h-full bg-[#7d8b6e]/20 hidden lg:block`}
                                />
                            </div>

                            <!-- Contenuto -->
                            <div
                                class={`lg:col-span-5 ${
                                    index % 2 === 0
                                        ? "lg:order-2"
                                        : "lg:order-1"
                                }`}
                            >
                                <!-- Numero grande -->
                                <div class="text-[120px] font-light text-[#7d8b6e]/10 leading-none mb-[-40px]">
                                    {destination.number}
                                </div>

                                <!-- Nome location -->
                                <h3 class="text-4xl md:text-5xl font-light text-gray-900 mb-3">
                                    {t(destination.nameKey)}
                                </h3>

                                <!-- Subtitle -->
                                <p class="text-lg font-light text-[#7d8b6e] mb-6 italic">
                                    {t(destination.subtitleKey)}
                                </p>

                                <!-- Separatore -->
                                <div class="flex items-center mb-6">
                                    <div class="w-12 h-px bg-[#7d8b6e]" />
                                    <div class="mx-3 w-1 h-1 rounded-full bg-[#7d8b6e]" />
                                    <div class="w-12 h-px bg-[#7d8b6e]" />
                                </div>

                                <!-- Descrizione -->
                                <p class="text-base font-light text-gray-600 leading-relaxed mb-6">
                                    {t(destination.descriptionKey)}
                                </p>

                                <!-- Dettagli -->
                                <div class="flex flex-wrap gap-2 mb-8">
                                    {t(destination.detailsKey)
                                        .split(" â€¢ ")
                                        .map((detail: string) => (
                                            <span class="text-xs tracking-wider uppercase text-gray-500 font-light px-3 py-1 border border-gray-200">
                                                {detail}
                                            </span>
                                        ))}
                                </div>

                                <!-- Link elegante -->
                                <a
                                    href="#contatti"
                                    class="inline-flex items-center group text-gray-900 font-light text-sm tracking-wider uppercase hover:text-[#7d8b6e] transition-colors duration-300"
                                >
                                    <span>{t("destinations_cta")}</span>
                                    <svg
                                        class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"
                                        />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- CTA finale elegante -->
        <div
            class="mt-24 lg:mt-32 text-center max-w-2xl mx-auto fade-in fade-in-delay-5"
        >
            <div class="flex items-center justify-center mb-6">
                <div class="w-16 h-px bg-[#7d8b6e]"></div>
                <div class="mx-4 w-1 h-1 rounded-full bg-[#7d8b6e]"></div>
                <div class="w-16 h-px bg-[#7d8b6e]"></div>
            </div>
            <p class="text-xl font-light text-gray-600 leading-relaxed mb-8">
                {t("destinations_final_text")}
            </p>
            <a
                href="#contatti"
                class="inline-flex items-center justify-center px-10 py-4 border border-[#7d8b6e] text-[#7d8b6e] text-sm font-light tracking-wider uppercase hover:bg-[#7d8b6e] hover:text-white transition-all duration-300"
            >
                {t("destinations_final_cta")}
            </a>
        </div>
    </div>
</section>
