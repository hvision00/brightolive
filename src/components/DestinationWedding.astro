---
// Sezione Destination Wedding Elegante
// Layout alternato magazine-style completamente diverso
// AGGIORNATO: Ora legge i dati da Sanity CMS

import { getLocalized, getLocalizedArray, getImageUrl, type Language, type HomePage, type Destination } from "../lib/sanity";

interface Props {
    lang?: Language;
    data?: HomePage | null; // Dati header/CTA
    destinations?: Destination[]; // Lista destinazioni
}

const { lang = "it", data, destinations = [] } = Astro.props;

// Prefisso per i link
const langPrefix = lang === "it" ? "" : `/${lang}`;

// Helper per ottenere testo localizzato con fallback
const getText = (field: any, fallback: string = "") => {
  if (!field) return fallback;
  return getLocalized(field, lang) || fallback;
};

// Testi header - usa i fallback (i testi completi sono gestiti dalle pagine destination-wedding)
const destinationsLabel = "Le nostre location";
const destinationsTitle1 = "Destination wedding";
const destinationsTitle2 = "nel nord Italia";
const destinationsDescription = "Ogni location è stata selezionata per la sua unicità, eleganza e capacità di creare momenti indimenticabili.";
const destinationsCta = "Scopri di più";
const destinationsFinalText = "Non hai trovato la location perfetta? Scrivimi.";
const destinationsFinalCta = "Contattami";

// Prepara le destinazioni per il template
const preparedDestinations = destinations.map((dest, index) => {
    const imageSource = dest.cardImage || dest.heroImage;
    return {
        number: (index + 1).toString().padStart(2, "0"),
        name: getText(dest.name, ""),
        subtitle: getText(dest.subtitle, ""),
        description: getText(dest.shortDescription, ""),
        details: Array.isArray(dest.details) ? getLocalizedArray(dest.details, lang) : [],
        image: imageSource ? getImageUrl(imageSource, 1200) : "",
        slug: dest.slug?.current || "",
    };
});
---

<section class="py-24 lg:py-32 bg-white">
    <div class="container mx-auto px-8 lg:px-16">
        <!-- Header Section -->
        <div class="max-w-3xl mb-20 fade-in">
            <div class="flex items-center mb-6">
                <div class="w-16 h-px bg-primary"></div>
                <span
                    class="ml-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
                >
                    {destinationsLabel}
                </span>
            </div>
            <h2
                class="text-4xl md:text-5xl lg:text-6xl font-light text-gray-900 mb-6 leading-tight"
            >
                {destinationsTitle1} <br />
                <span class="text-primary italic">{destinationsTitle2}</span>
            </h2>
            <p class="text-lg font-light text-gray-600 leading-relaxed">
                {destinationsDescription}
            </p>
        </div>

        <!-- Destinations List - Layout Alternato -->
        <div class="space-y-24 lg:space-y-32">
            {
                preparedDestinations.map((destination, index) => (
                    <div
                        class={`fade-in fade-in-delay-${Math.min(index + 1, 5)}`}
                    >
                        <div
                            class={`grid lg:grid-cols-12 gap-8 lg:gap-16 items-center ${
                                index % 2 === 0 ? "" : "lg:direction-rtl"
                            }`}
                        >
                            <!-- Immagine -->
                            <div
                                class={`lg:col-span-7 relative group ${
                                    index % 2 === 0
                                        ? "lg:order-1"
                                        : "lg:order-2"
                                }`}
                            >
                                <div class="relative h-[60vh] lg:h-[70vh] overflow-hidden">
                                    <img
                                        src={destination.image}
                                        alt={destination.name}
                                        class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                                    />
                                    <!-- Overlay gradient -->
                                    <div class="absolute inset-0 bg-linear-to-t from-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />

                                    <!-- Numero decorativo sulla foto -->
                                    <div class="absolute top-8 left-8 text-white/20 text-8xl font-light leading-none">
                                        {destination.number}
                                    </div>
                                </div>

                                <!-- Linea decorativa -->
                                <div
                                    class={`absolute top-0 ${
                                        index % 2 === 0
                                            ? "right-0 lg:-right-8"
                                            : "left-0 lg:-left-8"
                                    } w-px h-full bg-primary/20 hidden lg:block`}
                                />
                            </div>

                            <!-- Contenuto -->
                            <div
                                class={`lg:col-span-5 ${
                                    index % 2 === 0
                                        ? "lg:order-2"
                                        : "lg:order-1"
                                }`}
                            >
                                <!-- Numero grande -->
                                <div class="text-[120px] font-light text-primary/10 leading-none mb-[-40px]">
                                    {destination.number}
                                </div>

                                <!-- Nome location -->
                                <h3 class="text-4xl md:text-5xl font-light text-gray-900 mb-3">
                                    {destination.name}
                                </h3>

                                <!-- Subtitle -->
                                <p class="text-lg font-light text-primary mb-6 italic">
                                    {destination.subtitle}
                                </p>

                                <!-- Separatore -->
                                <div class="flex items-center mb-6">
                                    <div class="w-12 h-px bg-primary" />
                                    <div class="mx-3 w-1 h-1 rounded-full bg-primary" />
                                    <div class="w-12 h-px bg-primary" />
                                </div>

                                <!-- Descrizione -->
                                <p class="text-base font-light text-gray-600 leading-relaxed mb-6">
                                    {destination.description}
                                </p>

                                <!-- Dettagli -->
                                {destination.details && destination.details.length > 0 && (
                                    <div class="flex flex-wrap gap-2 mb-8">
                                        {destination.details.map((detail: string) => (
                                            <span class="text-xs tracking-wider uppercase text-gray-500 font-light px-3 py-1 border border-gray-200">
                                                {detail}
                                            </span>
                                        ))}
                                    </div>
                                )}

                                <!-- Link elegante -->
                                <a
                                    href={destination.slug ? `${langPrefix}/destination-wedding/${destination.slug}` : `${langPrefix}/contatti`}
                                    class="inline-flex items-center group text-gray-900 font-light text-sm tracking-wider uppercase hover:text-primary transition-colors duration-300"
                                >
                                    <span>{destination.slug ? destinationsCta : destinationsFinalCta}</span>
                                    <svg
                                        class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"
                                        />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- CTA finale elegante -->
        <div
            class="mt-24 lg:mt-32 text-center max-w-2xl mx-auto fade-in fade-in-delay-5"
        >
            <div class="flex items-center justify-center mb-6">
                <div class="w-16 h-px bg-primary"></div>
                <div class="mx-4 w-1 h-1 rounded-full bg-primary"></div>
                <div class="w-16 h-px bg-primary"></div>
            </div>
            <p class="text-xl font-light text-gray-600 leading-relaxed mb-8">
                {destinationsFinalText}
            </p>
            <a
                href={langPrefix + "/contatti"}
                class="inline-flex items-center justify-center px-10 py-4 border border-primary text-primary text-sm font-light tracking-wider uppercase hover:bg-primary hover:text-white transition-all duration-300"
            >
                {destinationsFinalCta}
            </a>
        </div>
    </div>
</section>
