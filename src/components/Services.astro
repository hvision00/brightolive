---
// Sezione Servizi Elegante
// Layout verticale con cards grandi e raffinate
// AGGIORNATO: Ora legge i dati da Sanity CMS

import { Icon } from "astro-icon/components";
import { getLocalized, getLocalizedArray, type Language, type HomePage, type Service } from "../lib/sanity";

interface Props {
    lang?: Language;
    data?: HomePage | null; // Dati header/CTA
    services?: Service[]; // Lista servizi
}

const { lang = "it", data, services = [] } = Astro.props;

// Prefisso per i link
const langPrefix = lang === "it" ? "" : `/${lang}`;

// Helper per ottenere testo localizzato con fallback
const getText = (field: any, fallback: string = "") => {
  if (!field) return fallback;
  return getLocalized(field, lang) || fallback;
};

// Testi header - da Sanity con fallback
const servicesLabel = getText(data?.servicesLabel, "I nostri servizi");
const servicesTitle1 = getText(data?.servicesTitle1, "Soluzioni");
const servicesTitle2 = getText(data?.servicesTitle2, "Raffinate");
const servicesTitle3 = getText(data?.servicesTitle3, "per ogni esigenza");
const servicesDescription = getText(data?.servicesDescription, "Ogni servizio è personalizzato per riflettere la tua visione e creare un'esperienza unica e memorabile.");
const servicesCta = getText(data?.servicesCta, "Richiedi informazioni");
const servicesFinalTitle = getText(data?.servicesFinalTitle, "Hai bisogno di un servizio personalizzato?");
const servicesFinalDescription = getText(data?.servicesFinalDescription, "Ogni matrimonio è unico. Creiamo insieme un pacchetto su misura per le tue esigenze specifiche.");
const servicesFinalCta = getText(data?.servicesFinalCta, "Scrivimi");

// Mapping icone basate sul numero del servizio
const iconMap: Record<string, string> = {
    "01": "lucide:calendar",
    "02": "lucide:sparkles",
    "03": "lucide:message-circle",
};

// Prepara i servizi per il template
const preparedServices = services.map((service) => ({
    number: service.number || "01",
    icon: iconMap[service.number || "01"] || "lucide:sparkles",
    title: getText(service.name, ""),
    subtitle: getText(service.tagline, ""),
    description: getText(service.intro, ""),
    features: getLocalizedArray(service.includes, lang),
    slug: service.slug?.current || "",
}));
---

<section class="py-24 lg:py-32 bg-neutral">
    <div class="container mx-auto px-8 lg:px-16">
        <!-- Header -->
        <div class="max-w-3xl mb-20 fade-in">
            <div class="flex items-center mb-6">
                <div class="w-16 h-px bg-primary"></div>
                <span
                    class="ml-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
                >
                    {servicesLabel}
                </span>
            </div>
            <h2
                class="text-4xl md:text-5xl lg:text-6xl font-light text-gray-900 mb-6 leading-tight"
            >
                {servicesTitle1} <span class="text-primary italic">{servicesTitle2}</span>
                <br />{servicesTitle3}
            </h2>
            <p class="text-lg font-light text-gray-600 leading-relaxed">
                {servicesDescription}
            </p>
        </div>

        <!-- Services List - Layout Verticale Elegante -->
        <div class="max-w-5xl mx-auto space-y-16 lg:space-y-24">
            {
                preparedServices.map((service, index) => (
                    <div
                        class={`fade-in fade-in-delay-${index + 1} group`}
                    >
                        <div class="grid lg:grid-cols-12 gap-8 lg:gap-12">
                            <!-- Colonna Sinistra - Numero e Icona -->
                            <div class="lg:col-span-4">
                                <div class="sticky top-8">
                                    <!-- Numero decorativo grande -->
                                    <div class="relative mb-8">
                                        <div class="text-[180px] lg:text-[220px] font-light text-primary/5 leading-none">
                                            {service.number}
                                        </div>
                                        <!-- Icona centrata sul numero -->
                                        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
                                            <div class="w-20 h-20 flex items-center justify-center bg-white rounded-full shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                                                <Icon
                                                    name={service.icon}
                                                    class="w-10 h-10 text-primary group-hover:scale-110 transition-transform duration-300"
                                                />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Separatore mobile -->
                                    <div class="flex items-center mb-6 lg:hidden">
                                        <div class="w-12 h-px bg-primary" />
                                        <div class="mx-3 w-1 h-1 rounded-full bg-primary" />
                                        <div class="flex-1 h-px bg-primary" />
                                    </div>
                                </div>
                            </div>

                            <!-- Colonna Destra - Contenuto -->
                            <div class="lg:col-span-8">
                                <!-- Titolo e Subtitle -->
                                <div class="mb-6">
                                    <h3 class="text-3xl md:text-4xl font-light text-gray-900 mb-2">
                                        {service.title}
                                    </h3>
                                    <p class="text-lg font-light text-primary italic">
                                        {service.subtitle}
                                    </p>
                                </div>

                                <!-- Separatore -->
                                <div class="flex items-center mb-8">
                                    <div class="w-16 h-px bg-primary" />
                                    <div class="mx-3 w-1 h-1 rounded-full bg-primary" />
                                    <div class="w-16 h-px bg-primary" />
                                </div>

                                <!-- Descrizione -->
                                <p class="text-base font-light text-gray-600 leading-relaxed mb-8">
                                    {service.description}
                                </p>

                                <!-- Features List -->
                                {service.features.length > 0 && (
                                    <div class="space-y-4 mb-8">
                                        {service.features.map((feature: string) => (
                                            <div class="flex items-start">
                                                <div class="shrink-0 w-6 h-6 flex items-center justify-center">
                                                    <div class="w-1.5 h-1.5 rounded-full bg-primary" />
                                                </div>
                                                <span class="text-sm font-light text-gray-600 ml-3">
                                                    {feature}
                                                </span>
                                            </div>
                                        ))}
                                    </div>
                                )}

                                <!-- Link elegante -->
                                <a
                                    href={service.slug ? `${langPrefix}/servizi/${service.slug}` : `${langPrefix}/contatti`}
                                    class="inline-flex items-center group/link text-gray-900 font-light text-sm tracking-wider uppercase hover:text-primary transition-colors duration-300"
                                >
                                    <span>{servicesCta}</span>
                                    <svg
                                        class="w-5 h-5 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"
                                        />
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Separatore tra servizi -->
                        {index < preparedServices.length - 1 && (
                            <div class="mt-16 lg:mt-24 flex items-center justify-center">
                                <div class="w-24 h-px bg-primary/30" />
                                <div class="mx-4 w-1.5 h-1.5 rounded-full bg-primary/30" />
                                <div class="w-24 h-px bg-primary/30" />
                            </div>
                        )}
                    </div>
                ))
            }
        </div>

        <!-- CTA Finale -->
        <div class="mt-24 lg:mt-32 text-center max-w-3xl mx-auto fade-in fade-in-delay-4">
            <div class="bg-white p-12 lg:p-16 shadow-lg">
                <div class="flex items-center justify-center mb-8">
                    <div class="w-16 h-px bg-primary"></div>
                    <div class="mx-4 w-1 h-1 rounded-full bg-primary"></div>
                    <div class="w-16 h-px bg-primary"></div>
                </div>

                <h3
                    class="text-2xl md:text-3xl font-light text-gray-900 mb-4"
                >
                    {servicesFinalTitle}
                </h3>
                <p class="text-base font-light text-gray-600 mb-8 leading-relaxed">
                    {servicesFinalDescription}
                </p>

                <a
                    href={langPrefix + "/contatti"}
                    class="inline-flex items-center justify-center px-10 py-4 bg-primary text-white text-sm font-light tracking-wider uppercase hover:bg-secondary transition-all duration-300"
                >
                    {servicesFinalCta}
                </a>
            </div>
        </div>
    </div>
</section>
