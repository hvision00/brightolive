---
interface Props {
  title: string;
  description: string;
  image?: string;
  type?: "website" | "article";
  noindex?: boolean;
  canonical?: string;
}

const {
  title,
  description,
  image = "/og-image.jpg", // Immagine di default
  type = "website",
  noindex = false,
  canonical,
} = Astro.props;

// URL del sito (modifica con il tuo dominio quando pubblichi)
const SITE_URL =
  import.meta.env.PUBLIC_SITE_URL || "https://www.thebrightolive.com";

// URL completo della pagina corrente
const currentUrl = canonical || new URL(Astro.url.pathname, SITE_URL).href;

// URL completo dell'immagine Open Graph
const ogImageUrl = image.startsWith("http")
  ? image
  : new URL(image, SITE_URL).href;
---

<!-- Meta Tags Base -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL (importante per SEO) -->
<link rel="canonical" href={currentUrl} />

<!-- Robots (indicizzazione) -->
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Open Graph / Facebook / WhatsApp / LinkedIn -->
<meta property="og:type" content={type} />
<meta property="og:url" content={currentUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="BrightOlive Wedding Planner" />
<meta property="og:locale" content="it_IT" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={currentUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />

<!-- Additional SEO -->
<meta name="author" content="BrightOlive Wedding Planner" />
<meta name="theme-color" content="#8b7355" />

<!-- Geo Tags (utile per wedding planner locale) -->
<meta name="geo.region" content="IT-VE" />
<meta name="geo.placename" content="Veneto, Italia" />
