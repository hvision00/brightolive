---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getTranslation } from "../../i18n/translations";

const lang = "en";
const t = (key: any) => getTranslation(lang, key);

// Prefisso per i link
const langPrefix = "/en";
---

<BaseLayout
  title="About Us - Sara De Coppi | BrightOlive Wedding Planner"
  description="Discover Sara De Coppi's story, wedding coordinator in Cison di Valmarino. Boho-chic weddings in Northern Italy with authenticity and elegance."
>
  <!-- Stesso contenuto della versione IT ma con traduzioni EN -->
  <!-- Copio esattamente la struttura ma con lang="en" -->

  <!-- Hero con Citazione -->
  <section
    class="relative min-h-[60vh] bg-neutral flex items-center justify-center overflow-hidden"
  >
    <div class="absolute inset-0 opacity-[0.03]">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern
            id="about-dots"
            x="0"
            y="0"
            width="40"
            height="40"
            patternUnits="userSpaceOnUse"
          >
            <circle cx="20" cy="20" r="1" fill="#7d8b6e"></circle>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#about-dots)"></rect>
      </svg>
    </div>

    <div class="container mx-auto px-8 lg:px-16 relative">
      <div class="max-w-4xl mx-auto text-center">
        <div
          class="text-[120px] font-serif text-primary/10 leading-none mb-[-30px] fade-in"
        >
          "
        </div>
        <blockquote
          class="text-2xl md:text-3xl lg:text-4xl font-light text-gray-900 leading-relaxed mb-8 fade-in fade-in-delay-1"
        >
          {t("about_hero_quote")}
        </blockquote>
        <div
          class="flex items-center justify-center mb-6 fade-in fade-in-delay-2"
        >
          <div class="w-16 h-px bg-primary"></div>
          <div class="mx-4 w-1.5 h-1.5 rounded-full bg-primary"></div>
          <div class="w-16 h-px bg-primary"></div>
        </div>
        <div class="fade-in fade-in-delay-3">
          <p class="text-lg font-light text-gray-900">
            {t("about_hero_author")}
          </p>
          <p
            class="text-sm tracking-[0.3em] uppercase text-gray-500 font-light mt-1"
          >
            {t("about_hero_role")}
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-24 lg:py-32 bg-white">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="grid lg:grid-cols-12 gap-12 lg:gap-16 items-center">
        <div class="lg:col-span-7 fade-in">
          <div class="flex items-center mb-6">
            <div class="w-16 h-px bg-primary"></div>
            <span
              class="ml-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
              >{t("about_intro_label")}</span
            >
          </div>
          <h2
            class="text-4xl md:text-5xl lg:text-6xl font-light text-gray-900 mb-8 leading-tight"
          >
            {t("about_intro_title")}
          </h2>
          <div
            class="space-y-6 text-base md:text-lg font-light text-gray-600 leading-relaxed"
          >
            <p class="text-gray-900 font-normal">{t("about_intro_text_1")}</p>
            <p>{t("about_intro_text_2")}</p>
            <p>{t("about_intro_text_3")}</p>
            <p class="text-primary italic">{t("about_intro_text_4")}</p>
          </div>
          <div class="mt-8 pt-8 border-t border-gray-200">
            <div class="flex items-center space-x-4">
              <div
                class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center"
              >
                <svg
                  class="w-6 h-6 text-primary"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p
                  class="text-sm font-light text-gray-500 uppercase tracking-wide"
                >
                  Based in
                </p>
                <p class="text-base font-normal text-gray-900">
                  {t("about_intro_location")}
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="lg:col-span-5 fade-in fade-in-delay-1">
          <div class="relative">
            <div class="aspect-3/4 bg-gray-200 relative overflow-hidden">
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center">
                  <svg
                    class="w-16 h-16 mx-auto text-gray-400 mb-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path>
                  </svg>
                  <p class="text-sm text-gray-400">Photo of Sara De Coppi</p>
                </div>
              </div>
            </div>
            <div
              class="absolute -bottom-6 -right-6 w-32 h-32 bg-primary/10 -z-10"
            >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-24 lg:py-32 bg-neutral">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="text-center max-w-3xl mx-auto mb-16 fade-in">
        <div class="flex items-center justify-center mb-6">
          <div class="w-16 h-px bg-primary"></div>
          <span
            class="mx-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
            >{t("about_mission_label")}</span
          >
          <div class="w-16 h-px bg-primary"></div>
        </div>
        <h2 class="text-4xl md:text-5xl font-light text-gray-900 mb-6">
          {t("about_mission_title")}
        </h2>
      </div>
      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {
          [
            t("about_mission_1"),
            t("about_mission_2"),
            t("about_mission_3"),
            t("about_mission_4"),
          ].map((mission, index) => (
            <div
              class={`bg-white p-8 lg:p-10 fade-in fade-in-delay-${index + 1}`}
            >
              <div class="text-6xl font-light text-primary/20 mb-4">
                0{index + 1}
              </div>
              <p class="text-lg font-light text-gray-700 leading-relaxed">
                {mission}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-24 lg:py-32 bg-white">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="grid lg:grid-cols-12 gap-12 lg:gap-16 items-center">
        <div class="lg:col-span-5 fade-in">
          <div class="relative">
            <div class="aspect-4/5 relative overflow-hidden">
              <img
                src="/gallery/gallery-8.jpg"
                alt="Boho-chic wedding style"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="absolute -top-6 -left-6 w-32 h-32 bg-primary/10 -z-10">
            </div>
          </div>
        </div>
        <div class="lg:col-span-7 fade-in fade-in-delay-1">
          <div class="flex items-center mb-6">
            <div class="w-16 h-px bg-primary"></div>
            <span
              class="ml-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
              >{t("about_style_label")}</span
            >
          </div>
          <h2 class="text-4xl md:text-5xl font-light text-gray-900 mb-4">
            {t("about_style_title")}
          </h2>
          <p class="text-xl font-light text-primary italic mb-8">
            {t("about_style_subtitle")}
          </p>
          <div class="flex items-center mb-8">
            <div class="w-12 h-px bg-primary"></div>
            <div class="mx-3 w-1 h-1 rounded-full bg-primary"></div>
            <div class="w-12 h-px bg-primary"></div>
          </div>
          <div
            class="space-y-6 text-base md:text-lg font-light text-gray-600 leading-relaxed mb-8"
          >
            <p>{t("about_style_text_1")}</p>
            <p>{t("about_style_text_2")}</p>
          </div>
          <div class="flex flex-wrap gap-3">
            {
              t("about_style_keywords")
                .split(" â€¢ ")
                .map((keyword: string) => (
                  <span class="px-4 py-2 border border-primary/30 text-sm font-light text-gray-700 tracking-wide">
                    {keyword}
                  </span>
                ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <section
    class="py-24 lg:py-32 bg-primary text-white relative overflow-hidden"
  >
    <div class="absolute inset-0 opacity-5">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern
            id="olive-pattern"
            x="0"
            y="0"
            width="60"
            height="60"
            patternUnits="userSpaceOnUse"
          >
            <circle cx="30" cy="30" r="1.5" fill="white"></circle>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#olive-pattern)"></rect>
      </svg>
    </div>
    <div class="container mx-auto px-8 lg:px-16 relative">
      <div class="max-w-4xl mx-auto">
        <div class="flex items-center justify-center mb-6 fade-in">
          <div class="w-16 h-px bg-white/40"></div>
          <span class="mx-4 text-xs tracking-[0.4em] uppercase font-light"
            >{t("about_why_label")}</span
          >
          <div class="w-16 h-px bg-white/40"></div>
        </div>
        <h2
          class="text-4xl md:text-5xl lg:text-6xl font-light text-center mb-12 fade-in fade-in-delay-1"
        >
          {t("about_why_title")}
          <span class="italic font-normal">{t("about_why_highlight")}</span>
        </h2>
        <div
          class="space-y-8 text-lg md:text-xl font-light leading-relaxed fade-in fade-in-delay-2"
        >
          <p>{t("about_why_text_1")}</p>
          <div class="pl-6 border-l-2 border-white/30">
            <p class="mb-4">
              <strong class="font-normal">Bright</strong>
              {t("about_why_bright").replace("Bright ", "")}
            </p>
            <p>
              <strong class="font-normal">Olive</strong>
              {t("about_why_olive").replace("Olive ", "")}
            </p>
          </div>
          <p class="text-center italic">
            {t("about_why_conclusion")}
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-24 lg:py-32 bg-white">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="max-w-3xl mx-auto text-center fade-in">
        <div class="flex items-center justify-center mb-8">
          <div class="w-16 h-px bg-primary"></div>
          <div class="mx-4 w-1.5 h-1.5 rounded-full bg-primary"></div>
          <div class="w-16 h-px bg-primary"></div>
        </div>
        <h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-6">
          {t("about_cta_title")}
        </h2>
        <p class="text-lg font-light text-gray-600 leading-relaxed mb-8">
          {t("about_cta_text")}
        </p>
        <a
          href={langPrefix + "/contatti"}
          class="inline-flex items-center justify-center px-10 py-4 bg-primary text-white text-sm font-light tracking-wider uppercase hover:bg-secondary transition-all duration-300"
        >
          {t("about_cta_button")}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
