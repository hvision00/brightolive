---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getServicesPage, getServices, getLocalized, getLocalizedArray, type Language } from "../../lib/sanity";

const lang: Language = "en";
const [servicesPage, servicesData] = await Promise.all([getServicesPage(), getServices()]);
const langPrefix = "/en";

const getText = (field: any, fallback: string = "") => {
  if (!field) return fallback;
  return getLocalized(field, lang) || fallback;
};

const heroLabel = getText(servicesPage?.heroLabel, "Services");
const heroTitle = getText(servicesPage?.heroTitle, "Tailored solutions");
const heroSubtitle = getText(servicesPage?.heroSubtitle, "for your wedding");
const heroText = getText(servicesPage?.heroText);
const processLabel = getText(servicesPage?.processLabel, "The process");
const processTitle = getText(servicesPage?.processTitle, "How we work together");
const processSteps = servicesPage?.processSteps || [];
const ctaTitle = getText(servicesPage?.ctaTitle);
const ctaText = getText(servicesPage?.ctaText);
const ctaButton = getText(servicesPage?.ctaButton, "Write me");

const services = servicesData.map((service) => ({
    slug: service.slug?.current || "",
    number: service.number || "01",
    name: getText(service.name),
    tagline: getText(service.tagline),
    intro: getText(service.intro),
    ideal: getText(service.ideal),
    whatLabel: getText(service.whatLabel, "What's included"),
    includes: getLocalizedArray(service.includes, lang),
    howLabel: getText(service.howLabel, "How it works"),
    steps: getLocalizedArray(service.steps, lang),
}));
---

<BaseLayout
    title="Wedding Planner Services Northern Italy | BrightOlive"
    description="Complete wedding planning services: day coordination, full planning and personalized consulting. Unforgettable weddings in Northern Italy."
    image="/og-image.jpg"
>
    <!-- Stesso template della versione IT -->
    <section class="py-24 lg:py-32 bg-neutral">
        <div class="container mx-auto px-8 lg:px-16">
            <div class="max-w-4xl mx-auto text-center">
                <div class="flex items-center justify-center mb-6 fade-in">
                    <div class="w-16 h-px bg-primary"></div>
                    <span class="mx-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light">{heroLabel}</span>
                    <div class="w-16 h-px bg-primary"></div>
                </div>
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-gray-900 mb-4 leading-tight fade-in fade-in-delay-1">
                    {heroTitle} <br /><span class="text-primary italic">{heroSubtitle}</span>
                </h1>
                <p class="text-lg md:text-xl font-light text-gray-600 leading-relaxed fade-in fade-in-delay-2">{heroText}</p>
            </div>
        </div>
    </section>

    {services.map((service, index) => (
        <section class={`py-24 lg:py-32 ${index % 2 === 0 ? 'bg-white' : 'bg-neutral'}`}>
            <div class="container mx-auto px-8 lg:px-16">
                <div class={`grid lg:grid-cols-12 gap-12 lg:gap-16 items-start ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
                    <div class={`lg:col-span-7 ${index % 2 === 1 ? 'lg:col-start-6' : ''} fade-in`}>
                        <div class="text-[140px] lg:text-[180px] font-light text-primary/5 leading-none mb-[-60px]">{service.number}</div>
                        <h2 class="text-4xl md:text-5xl font-light text-gray-900 mb-3">{service.name}</h2>
                        <p class="text-xl font-light text-primary italic mb-8">{service.tagline}</p>
                        <div class="flex items-center mb-8">
                            <div class="w-12 h-px bg-primary"></div>
                            <div class="mx-3 w-1 h-1 rounded-full bg-primary"></div>
                            <div class="w-12 h-px bg-primary"></div>
                        </div>
                        <p class="text-base md:text-lg font-light text-gray-600 leading-relaxed mb-6">{service.intro}</p>
                        {service.ideal && (
                            <div class="bg-primary/5 border-l-2 border-primary p-6 mb-10">
                                <p class="text-sm font-normal text-gray-700 leading-relaxed">
                                    <strong class="text-primary">Ideal for:</strong> {service.ideal}
                                </p>
                            </div>
                        )}
                        <h3 class="text-2xl font-light text-gray-900 mb-6">{service.whatLabel}</h3>
                        <div class="space-y-4 mb-10">
                            {service.includes.map((include: string) => (
                                <div class="flex items-start">
                                    <div class="shrink-0 w-6 h-6 rounded-full bg-primary flex items-center justify-center mt-0.5">
                                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    </div>
                                    <p class="ml-4 text-base font-light text-gray-700 leading-relaxed">{include}</p>
                                </div>
                            ))}
                        </div>
                    </div>
                    <div class={`lg:col-span-5 ${index % 2 === 1 ? 'lg:col-start-1 lg:row-start-1' : ''} fade-in fade-in-delay-1`}>
                        <div class="sticky top-8">
                            <div class="bg-white p-8 lg:p-10 shadow-lg">
                                <h3 class="text-2xl font-light text-gray-900 mb-8">{service.howLabel}</h3>
                                <div class="space-y-8">
                                    {service.steps.map((step: string, stepIndex: number) => (
                                        <div class="flex items-start">
                                            <div class="shrink-0">
                                                <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
                                                    <span class="text-lg font-light text-primary">{(stepIndex + 1).toString().padStart(2, '0')}</span>
                                                </div>
                                            </div>
                                            <p class="ml-4 mt-2 text-base font-light text-gray-700 leading-relaxed">{step}</p>
                                        </div>
                                    ))}
                                </div>
                                <div class="mt-10 pt-8 border-t border-gray-200">
                                    <a href={langPrefix + "/contatti"} class="block text-center px-8 py-3 bg-primary text-white text-sm font-light tracking-wider uppercase hover:bg-secondary transition-all duration-300">Request Info</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    ))}

    <section class="py-24 lg:py-32 bg-primary text-white relative overflow-hidden">
        <div class="absolute inset-0 opacity-5">
            <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
                <defs><pattern id="process-pattern" x="0" y="0" width="60" height="60" patternUnits="userSpaceOnUse"><circle cx="30" cy="30" r="1.5" fill="white"></circle></pattern></defs>
                <rect width="100%" height="100%" fill="url(#process-pattern)"></rect>
            </svg>
        </div>
        <div class="container mx-auto px-8 lg:px-16 relative">
            <div class="text-center mb-16 fade-in">
                <div class="flex items-center justify-center mb-6">
                    <div class="w-16 h-px bg-white/40"></div>
                    <span class="mx-4 text-xs tracking-[0.4em] uppercase font-light">{processLabel}</span>
                    <div class="w-16 h-px bg-white/40"></div>
                </div>
                <h2 class="text-4xl md:text-5xl font-light mb-4">{processTitle}</h2>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
                {processSteps.map((step, stepNum) => (
                    <div class={`text-center fade-in fade-in-delay-${stepNum + 1}`}>
                        <div class="text-7xl font-light text-white/20 mb-4">{(stepNum + 1).toString().padStart(2, '0')}</div>
                        <h3 class="text-xl font-light mb-4">{getText(step.title)}</h3>
                        <div class="flex items-center justify-center mb-4">
                            <div class="w-8 h-px bg-white/30"></div>
                            <div class="mx-2 w-1 h-1 rounded-full bg-white/50"></div>
                            <div class="w-8 h-px bg-white/30"></div>
                        </div>
                        <p class="text-sm font-light text-white/90 leading-relaxed">{getText(step.text)}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section class="py-24 lg:py-32 bg-white">
        <div class="container mx-auto px-8 lg:px-16">
            <div class="max-w-3xl mx-auto text-center fade-in">
                <div class="flex items-center justify-center mb-8">
                    <div class="w-16 h-px bg-primary"></div>
                    <div class="mx-4 w-1.5 h-1.5 rounded-full bg-primary"></div>
                    <div class="w-16 h-px bg-primary"></div>
                </div>
                <h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-6">{ctaTitle}</h2>
                <p class="text-lg font-light text-gray-600 leading-relaxed mb-10">{ctaText}</p>
                <a href={langPrefix + "/contatti"} class="inline-flex items-center justify-center px-10 py-4 bg-primary text-white text-sm font-light tracking-wider uppercase hover:bg-secondary transition-all duration-300">{ctaButton}</a>
            </div>
        </div>
    </section>
</BaseLayout>
