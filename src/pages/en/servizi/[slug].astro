---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { getServices, getServiceBySlug, getLocalized, getLocalizedArray, type Language } from "../../../lib/sanity";

export async function getStaticPaths() {
  const services = await getServices();
  return services.map((service) => ({
    params: { slug: service.slug.current },
  }));
}

const { slug } = Astro.params;
const lang: Language = "en";
const service = await getServiceBySlug(slug!);

if (!service) {
  return Astro.redirect("/404");
}

const getText = (field: any, fallback: string = "") => {
  if (!field) return fallback;
  return getLocalized(field, lang) || fallback;
};

const name = getText(service.name, "Service");
const tagline = getText(service.tagline, "");
const intro = getText(service.intro, "");
const ideal = getText(service.ideal, "");
const whatLabel = getText(service.whatLabel, "What's included");
const includes = getLocalizedArray(service.includes, lang);
const howLabel = getText(service.howLabel, "How it works");
const steps = getLocalizedArray(service.steps, lang);
---

<BaseLayout
  title={`${name} | Wedding Planner BrightOlive`}
  description={tagline || intro}
>
  <!-- Hero Section -->
  <section class="relative py-24 lg:py-32 bg-gradient-to-b from-neutral to-white">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Number Badge -->
        {service.number && (
          <div class="inline-block mb-6">
            <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center">
              <span class="text-2xl font-light text-primary">{service.number}</span>
            </div>
          </div>
        )}

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-light text-gray-900 mb-6 leading-tight">
          {name}
        </h1>

        <!-- Tagline -->
        {tagline && (
          <p class="text-xl md:text-2xl font-light text-primary italic mb-8">
            {tagline}
          </p>
        )}

        <!-- Intro -->
        {intro && (
          <p class="text-lg md:text-xl font-light text-gray-600 leading-relaxed max-w-3xl mx-auto">
            {intro}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Ideal For Section -->
  {ideal && (
    <section class="py-16 lg:py-24 bg-white">
      <div class="container mx-auto px-8 lg:px-16">
        <div class="max-w-3xl mx-auto">
          <div class="bg-primary/5 p-8 lg:p-12 rounded-lg border-l-4 border-primary">
            <h2 class="text-2xl md:text-3xl font-light text-gray-900 mb-4">
              Ideal for
            </h2>
            <p class="text-lg font-light text-gray-700 leading-relaxed">
              {ideal}
            </p>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- What's Included Section -->
  {includes.length > 0 && (
    <section class="py-16 lg:py-24 bg-neutral">
      <div class="container mx-auto px-8 lg:px-16">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-12 text-center">
            {whatLabel}
          </h2>

          <div class="grid md:grid-cols-2 gap-6">
            {includes.map((item) => (
              <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start">
                  <div class="shrink-0 w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center mt-1">
                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <p class="ml-4 text-base font-light text-gray-700 leading-relaxed">
                    {item}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- How It Works Section -->
  {steps.length > 0 && (
    <section class="py-16 lg:py-24 bg-white">
      <div class="container mx-auto px-8 lg:px-16">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-12 text-center">
            {howLabel}
          </h2>

          <div class="space-y-8">
            {steps.map((step, index) => (
              <div class="flex items-start">
                <div class="shrink-0 w-12 h-12 rounded-full bg-primary text-white flex items-center justify-center text-lg font-light">
                  {index + 1}
                </div>
                <div class="ml-6">
                  <p class="text-lg font-light text-gray-700 leading-relaxed">
                    {step}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-primary text-white">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-light mb-6">
          Interested in this service?
        </h2>
        <p class="text-lg font-light mb-8 opacity-90">
          Contact me for a free consultation and personalized quote
        </p>
        <a
          href="/en/contatti"
          class="inline-block px-12 py-4 bg-white text-primary text-sm font-light tracking-wider uppercase hover:bg-gray-100 transition-all duration-300"
        >
          Request information
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
