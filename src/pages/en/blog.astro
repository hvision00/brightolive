---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getBlogPosts, getLocalized, getImageUrl, type Language } from "../../lib/sanity";

const lang: Language = "en";
const posts = await getBlogPosts();

const getText = (field: any, fallback: string = "") => {
  if (!field) return fallback;
  return getLocalized(field, lang) || fallback;
};

const formatDate = (dateString: string | undefined) => {
  if (!dateString) return "";
  const date = new Date(dateString);
  return new Intl.DateTimeFormat("en-US", {
    day: "numeric",
    month: "long",
    year: "numeric",
  }).format(date);
};
---

<BaseLayout
  title="Blog | Wedding Planner BrightOlive"
  description="Tips, inspiration and stories of unforgettable weddings in Northern Italy"
>
  <!-- Hero Section -->
  <section class="py-24 lg:py-32 bg-gradient-to-b from-neutral to-white">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Label -->
        <div class="flex items-center justify-center mb-6">
          <div class="w-16 h-px bg-primary"></div>
          <span class="mx-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light">
            Blog
          </span>
          <div class="w-16 h-px bg-primary"></div>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-light text-gray-900 mb-6 leading-tight">
          Stories & Inspiration
        </h1>

        <!-- Description -->
        <p class="text-lg md:text-xl font-light text-gray-600 leading-relaxed">
          Tips for your wedding, trends and stories from the world of wedding planning
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-8 lg:px-16">
      {posts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
          {posts.map((post) => {
            const title = getText(post.title, "Article");
            const excerpt = getText(post.excerpt, "");
            const categoryName = post.category?.name ? getText(post.category.name, "") : "";
            const imageUrl = getImageUrl(post.featuredImage, 600);
            const postDate = formatDate(post.publishedAt);
            
            return (
              <article class="group bg-white rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                {/* Featured Image */}
                <a href={`/en/blog/${post.slug.current}`} class="block aspect-video overflow-hidden bg-gray-200">
                  {imageUrl ? (
                    <img
                      src={imageUrl}
                      alt={title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                      <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                  )}
                </a>

                {/* Content */}
                <div class="p-6">
                  {/* Category & Date */}
                  <div class="flex items-center justify-between mb-4 text-sm">
                    {categoryName && (
                      <span class="text-primary font-light uppercase tracking-wider">
                        {categoryName}
                      </span>
                    )}
                    {postDate && (
                      <time class="text-gray-500 font-light">
                        {postDate}
                      </time>
                    )}
                  </div>

                  {/* Title */}
                  <h2 class="text-xl md:text-2xl font-light text-gray-900 mb-3 group-hover:text-primary transition-colors">
                    <a href={`/en/blog/${post.slug.current}`}>
                      {title}
                    </a>
                  </h2>

                  {/* Excerpt */}
                  {excerpt && (
                    <p class="text-base font-light text-gray-600 leading-relaxed mb-4 line-clamp-3">
                      {excerpt}
                    </p>
                  )}

                  {/* Read More */}
                  <a
                    href={`/en/blog/${post.slug.current}`}
                    class="inline-flex items-center text-sm font-light text-primary hover:underline"
                  >
                    Read article
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-16">
          <p class="text-xl font-light text-gray-500">
            No articles published yet
          </p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
