---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getTranslation } from "../../i18n/translations";

const lang = "en";
const t = (key: any) => getTranslation(lang, key);

// Prefisso per i link
const langPrefix = "/en";

// Blog posts data (destination wedding articles)
const blogPosts = [
  {
    id: "prosecco",
    title: "Getting Married in the Prosecco Hills",
    excerpt:
      "Discover why the UNESCO Prosecco Hills are the perfect setting for an authentic and romantic wedding in the heart of Veneto.",
    image: "/destinations/prosecco.jpg",
    category: t("blog_category_destination"),
    date: "2024-12-01",
    link: langPrefix + "/destination-wedding/prosecco",
  },
  {
    id: "dolomiti",
    title: "Getting Married in the Veneto Dolomites",
    excerpt:
      "Between dream, nature and wonder. The Dolomites offer a unique setting in the world to celebrate your love surrounded by alpine magnificence.",
    image: "/destinations/dolomiti.jpg",
    category: t("blog_category_destination"),
    date: "2024-11-28",
    link: langPrefix + "/destination-wedding/dolomiti",
  },
  {
    id: "venezia",
    title: "Venice: A Dream Wedding in the Serenissima",
    excerpt:
      "Canals, historic palaces and eternal romance. Discover how to organize an unforgettable wedding in the most romantic city in the world.",
    image: "/destinations/venezia.jpg",
    category: t("blog_category_destination"),
    date: "2024-11-25",
    link: langPrefix + "/destination-wedding/venezia",
  },
  {
    id: "bassano",
    title: "Bassano del Grappa: Elegance and History",
    excerpt:
      "A village rich in charm where the elegance of the past meets modern refinement for an unforgettable wedding.",
    image: "/destinations/bassano.jpg",
    category: t("blog_category_destination"),
    date: "2024-11-20",
    link: langPrefix + "/destination-wedding/bassano",
  },
  {
    id: "padova",
    title: "Getting Married in Padua and the Euganean Hills",
    excerpt:
      "Historic Venetian Villas, spas, nature and culture come together to create the perfect setting for a refined and elegant wedding.",
    image: "/destinations/padova.jpg",
    category: t("blog_category_destination"),
    date: "2024-11-15",
    link: langPrefix + "/destination-wedding/padova",
  },
];
---

<BaseLayout
  title="Blog | BrightOlive Wedding Planner - Wedding Stories and Inspirations"
  description="Discover stories, tips and inspirations for your wedding in northern Italy. Destination weddings, real weddings and guides to organize the perfect day."
>
  <!-- Hero Section -->
  <section class="pt-32 pb-20 lg:pt-40 lg:pb-28 bg-neutral">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Label -->
        <div class="flex items-center justify-center mb-6 fade-in">
          <div class="w-16 h-px bg-primary"></div>
          <span
            class="mx-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
          >
            {t("blog_hero_label")}
          </span>
          <div class="w-16 h-px bg-primary"></div>
        </div>

        <!-- Title -->
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-light text-gray-900 mb-4 leading-tight fade-in fade-in-delay-1"
        >
          {t("blog_hero_title")}
        </h1>
        <p
          class="text-xl md:text-2xl font-light text-primary italic mb-6 fade-in fade-in-delay-2"
        >
          {t("blog_hero_subtitle")}
        </p>

        <!-- Description -->
        <p
          class="text-lg font-light text-gray-600 leading-relaxed max-w-2xl mx-auto fade-in fade-in-delay-3"
        >
          {t("blog_hero_text")}
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="py-20 lg:py-28 bg-white">
    <div class="container mx-auto px-8 lg:px-16">
      {
        blogPosts.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
            {blogPosts.map((post, index) => (
              <article class={`group fade-in fade-in-delay-${(index % 3) + 1}`}>
                {/* Image */}
                <a href={post.link} class="block relative overflow-hidden mb-6">
                  <div class="aspect-4/3 overflow-hidden bg-gray-100">
                    <img
                      src={post.image}
                      alt={post.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                  </div>
                  {/* Category Badge */}
                  <div class="absolute top-4 left-4">
                    <span class="inline-block px-4 py-2 bg-white/95 backdrop-blur-sm text-xs tracking-wider uppercase font-light text-gray-900">
                      {post.category}
                    </span>
                  </div>
                </a>

                {/* Content */}
                <div class="space-y-3">
                  {/* Date */}
                  <time class="text-xs tracking-wider uppercase font-light text-gray-500">
                    {new Date(post.date).toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </time>

                  {/* Title */}
                  <h2 class="text-2xl font-light text-gray-900 leading-tight">
                    <a
                      href={post.link}
                      class="hover:text-primary transition-colors duration-300"
                    >
                      {post.title}
                    </a>
                  </h2>

                  {/* Excerpt */}
                  <p class="text-sm font-light text-gray-600 leading-relaxed">
                    {post.excerpt}
                  </p>

                  {/* Read More Link */}
                  <a
                    href={post.link}
                    class="inline-flex items-center group/link text-gray-900 font-light text-sm tracking-wider uppercase hover:text-primary transition-colors duration-300"
                  >
                    <span>{t("blog_read_more")}</span>
                    <svg
                      class="w-5 h-5 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-20">
            <p class="text-lg font-light text-gray-600">{t("blog_no_posts")}</p>
          </div>
        )
      }
    </div>
  </section>
</BaseLayout>
