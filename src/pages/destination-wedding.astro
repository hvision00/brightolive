---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getTranslation } from "../i18n/translations";

const lang = "it";
const t = (key: any) => getTranslation(lang, key);

// Prefisso per i link
const langPrefix = lang === "it" ? "" : `/${lang}`;

const destinations = [
    {
        id: "prosecco",
        name: t("destination_prosecco_name"),
        image: "/destinations/prosecco.jpg",
        fullDescKey: "dw_prosecco_full_description",
        whyTitleKey: "dw_prosecco_why_title",
        whyKeys: ["dw_prosecco_why_1", "dw_prosecco_why_2", "dw_prosecco_why_3", "dw_prosecco_why_4"],
        seasonsKey: "dw_prosecco_seasons",
        styleKey: "dw_prosecco_style",
        articleLink: "/destination-wedding/prosecco"
    },
    {
        id: "dolomiti",
        name: t("destination_dolomiti_name"),
        image: "/destinations/dolomiti.jpg",
        fullDescKey: "dw_dolomiti_full_description",
        whyTitleKey: "dw_dolomiti_why_title",
        whyKeys: ["dw_dolomiti_why_1", "dw_dolomiti_why_2", "dw_dolomiti_why_3", "dw_dolomiti_why_4"],
        seasonsKey: "dw_dolomiti_seasons",
        styleKey: "dw_dolomiti_style",
        articleLink: "/destination-wedding/dolomiti"
    },
    {
        id: "venezia",
        name: t("destination_venezia_name"),
        image: "/destinations/venezia.jpg",
        fullDescKey: "dw_venezia_full_description",
        whyTitleKey: "dw_venezia_why_title",
        whyKeys: ["dw_venezia_why_1", "dw_venezia_why_2", "dw_venezia_why_3", "dw_venezia_why_4"],
        seasonsKey: "dw_venezia_seasons",
        styleKey: "dw_venezia_style",
        articleLink: "/destination-wedding/venezia"
    },
    {
        id: "bassano",
        name: t("destination_bassano_name"),
        image: "/destinations/bassano.jpg",
        fullDescKey: "dw_bassano_full_description",
        whyTitleKey: "dw_bassano_why_title",
        whyKeys: ["dw_bassano_why_1", "dw_bassano_why_2", "dw_bassano_why_3", "dw_bassano_why_4"],
        seasonsKey: "dw_bassano_seasons",
        styleKey: "dw_bassano_style",
        articleLink: "/destination-wedding/bassano"
    },
    {
        id: "padova",
        name: t("destination_padova_name"),
        image: "/destinations/padova.jpg",
        fullDescKey: "dw_padova_full_description",
        whyTitleKey: "dw_padova_why_title",
        whyKeys: ["dw_padova_why_1", "dw_padova_why_2", "dw_padova_why_3", "dw_padova_why_4"],
        seasonsKey: "dw_padova_seasons",
        styleKey: "dw_padova_style",
        articleLink: "/destination-wedding/padova"
    }
];
---

<BaseLayout
    title="Destination Wedding Nord Italia | Location Matrimoni Veneto e Dolomiti"
    description="Scopri le migliori location per destination wedding nel Nord Italia: Dolomiti, Venezia, Bassano del Grappa, Padova e Colline del Prosecco. Matrimoni unici in luoghi UNESCO."
>
    <!-- Hero Section -->
    <section class="py-24 lg:py-32 bg-white">
        <div class="container mx-auto px-8 lg:px-16">
            <div class="max-w-4xl mx-auto text-center">
                <!-- Label -->
                <div class="flex items-center justify-center mb-6 fade-in">
                    <div class="w-16 h-px bg-primary"></div>
                    <span class="mx-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light">
                        {t("dw_page_hero_label")}
                    </span>
                    <div class="w-16 h-px bg-primary"></div>
                </div>

                <!-- Titolo -->
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-gray-900 mb-4 leading-tight fade-in fade-in-delay-1">
                    {t("dw_page_hero_title")} <br />
                    <span class="text-primary italic">{t("dw_page_hero_subtitle")}</span>
                </h1>

                <!-- Descrizione -->
                <p class="text-lg md:text-xl font-light text-gray-600 leading-relaxed fade-in fade-in-delay-2">
                    {t("dw_page_hero_text")}
                </p>
            </div>
        </div>
    </section>

    <!-- Location Details -->
    {destinations.map((dest, index) => (
        <section class={`py-24 lg:py-32 ${index % 2 === 0 ? 'bg-neutral' : 'bg-white'}`}>
            <div class="container mx-auto px-8 lg:px-16">
                <div class={`grid lg:grid-cols-12 gap-12 lg:gap-16 items-center ${index % 2 === 1 ? '' : ''}`}>
                    <!-- Immagine -->
                    <div class={`lg:col-span-6 ${index % 2 === 1 ? 'lg:col-start-7' : ''} fade-in`}>
                        <div class="relative">
                            <!-- Immagine location -->
                            <div class="aspect-4/3 relative overflow-hidden shadow-2xl">
                                <img
                                    src={dest.image}
                                    alt={dest.name}
                                    class="w-full h-full object-cover"
                                />
                                <div class="absolute inset-0 bg-linear-to-t from-black/30 to-transparent"></div>
                                
                                <!-- Nome sulla foto -->
                                <div class="absolute bottom-8 left-8 right-8">
                                    <h2 class="text-4xl md:text-5xl font-light text-white drop-shadow-lg">
                                        {dest.name}
                                    </h2>
                                </div>
                            </div>

                            <!-- Decorazione -->
                            <div class={`absolute ${index % 2 === 0 ? '-bottom-6 -right-6' : '-bottom-6 -left-6'} w-32 h-32 bg-primary/10 -z-10`}></div>
                        </div>
                    </div>

                    <!-- Contenuto -->
                    <div class={`lg:col-span-6 ${index % 2 === 1 ? 'lg:col-start-1 lg:row-start-1' : ''} fade-in fade-in-delay-1`}>
                        <!-- Descrizione completa -->
                        <p class="text-base md:text-lg font-light text-gray-700 leading-relaxed mb-8">
                            {t(dest.fullDescKey)}
                        </p>

                        <!-- Separatore -->
                        <div class="flex items-center mb-8">
                            <div class="w-12 h-px bg-primary"></div>
                            <div class="mx-3 w-1 h-1 rounded-full bg-primary"></div>
                            <div class="w-12 h-px bg-primary"></div>
                        </div>

                        <!-- Perché Scegliere -->
                        <h3 class="text-2xl font-light text-gray-900 mb-6">
                            {t(dest.whyTitleKey)}
                        </h3>

                        <div class="space-y-4 mb-8">
                            {dest.whyKeys.map((key: string) => (
                                <div class="flex items-start">
                                    <div class="shrink-0 w-5 h-5 rounded-full border-2 border-primary flex items-center justify-center mt-1">
                                        <div class="w-2 h-2 rounded-full bg-primary"></div>
                                    </div>
                                    <p class="ml-4 text-base font-light text-gray-700">
                                        {t(key)}
                                    </p>
                                </div>
                            ))}
                        </div>

                        <!-- Info Box -->
                        <div class="bg-white border border-primary/20 p-6 space-y-3">
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-primary mr-3 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <p class="text-sm font-light text-gray-700">
                                    <strong class="font-normal">Stagionalità:</strong> {t(dest.seasonsKey)}
                                </p>
                            </div>
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-primary mr-3 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                                </svg>
                                <p class="text-sm font-light text-gray-700">
                                    {t(dest.styleKey)}
                                </p>
                            </div>
                        </div>

                        <!-- CTA -->
                        <div class="mt-8">
                            <a
                                href={dest.articleLink || "/contatti"}
                                class="inline-flex items-center text-primary font-light text-sm tracking-wider uppercase hover:text-[#6d7a5e] transition-colors group"
                            >
                                <span>{dest.articleLink ? "Scopri di Più" : "Contattami"}</span>
                                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    ))}

    <!-- Sezione Perché il Nord Italia -->
    <section class="py-24 lg:py-32 bg-primary text-white relative overflow-hidden">
        <!-- Pattern -->
        <div class="absolute inset-0 opacity-5">
            <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <pattern id="dw-pattern" x="0" y="0" width="60" height="60" patternUnits="userSpaceOnUse">
                        <circle cx="30" cy="30" r="1.5" fill="white"></circle>
                    </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#dw-pattern)"></rect>
            </svg>
        </div>

        <div class="container mx-auto px-8 lg:px-16 relative">
            <div class="max-w-4xl mx-auto text-center">
                <!-- Label -->
                <div class="flex items-center justify-center mb-6 fade-in">
                    <div class="w-16 h-px bg-white/40"></div>
                    <span class="mx-4 text-xs tracking-[0.4em] uppercase font-light">
                        {t("dw_page_why_label")}
                    </span>
                    <div class="w-16 h-px bg-white/40"></div>
                </div>

                <!-- Titolo -->
                <h2 class="text-4xl md:text-5xl font-light mb-8 fade-in fade-in-delay-1">
                    {t("dw_page_why_title")}
                </h2>

                <!-- Testo -->
                <p class="text-lg md:text-xl font-light leading-relaxed fade-in fade-in-delay-2">
                    {t("dw_page_why_text")}
                </p>
            </div>
        </div>
    </section>

    <!-- CTA Finale -->
    <section class="py-24 lg:py-32 bg-white">
        <div class="container mx-auto px-8 lg:px-16">
            <div class="max-w-3xl mx-auto text-center fade-in">
                <div class="flex items-center justify-center mb-8">
                    <div class="w-16 h-px bg-primary"></div>
                    <div class="mx-4 w-1.5 h-1.5 rounded-full bg-primary"></div>
                    <div class="w-16 h-px bg-primary"></div>
                </div>

                <h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-6">
                    {t("dw_page_cta_title")}
                </h2>

                <p class="text-lg font-light text-gray-600 leading-relaxed mb-10">
                    {t("dw_page_cta_text")}
                </p>

                <a
                    href={langPrefix + "/contatti"}
                    class="inline-flex items-center justify-center px-10 py-4 bg-primary text-white text-sm font-light tracking-wider uppercase hover:bg-secondary transition-all duration-300"
                >
                    {t("dw_page_cta_button")}
                </a>
            </div>
        </div>
    </section>
</BaseLayout>

