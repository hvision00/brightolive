---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getTranslation } from "../i18n/translations";

const lang = "it";
const t = (key: any) => getTranslation(lang, key);

// Prefisso per i link
const langPrefix = lang === "it" ? "" : `/${lang}`;

const services = [
    {
        id: "coordinamento",
        number: "01",
        icon: "lucide:calendar",
        nameKey: "service_coord_name",
        taglineKey: "service_coord_tagline",
        introKey: "service_coord_intro",
        idealKey: "service_coord_ideal",
        whatLabelKey: "service_coord_what_label",
        includeKeys: [
            "service_coord_include_1",
            "service_coord_include_2",
            "service_coord_include_3",
            "service_coord_include_4",
            "service_coord_include_5",
            "service_coord_include_6"
        ],
        howLabelKey: "service_coord_how_label",
        stepsKeys: [
            "service_coord_step_1",
            "service_coord_step_2",
            "service_coord_step_3",
            "service_coord_step_4"
        ]
    },
    {
        id: "wedding-totale",
        number: "02",
        icon: "lucide:sparkles",
        nameKey: "service_total_name",
        taglineKey: "service_total_tagline",
        introKey: "service_total_intro",
        idealKey: "service_total_ideal",
        whatLabelKey: "service_total_what_label",
        includeKeys: [
            "service_total_include_1",
            "service_total_include_2",
            "service_total_include_3",
            "service_total_include_4",
            "service_total_include_5",
            "service_total_include_6",
            "service_total_include_7",
            "service_total_include_8"
        ],
        howLabelKey: "service_total_how_label",
        stepsKeys: [
            "service_total_step_1",
            "service_total_step_2",
            "service_total_step_3",
            "service_total_step_4"
        ]
    },
    {
        id: "consulenza",
        number: "03",
        icon: "lucide:message-circle",
        nameKey: "service_consult_name",
        taglineKey: "service_consult_tagline",
        introKey: "service_consult_intro",
        idealKey: "service_consult_ideal",
        whatLabelKey: "service_consult_what_label",
        includeKeys: [
            "service_consult_include_1",
            "service_consult_include_2",
            "service_consult_include_3",
            "service_consult_include_4",
            "service_consult_include_5",
            "service_consult_include_6"
        ],
        howLabelKey: "service_consult_how_label",
        stepsKeys: [
            "service_consult_step_1",
            "service_consult_step_2",
            "service_consult_step_3",
            "service_consult_step_4"
        ]
    }
];
---

<BaseLayout
    title="Servizi Wedding Planner Veneto | Coordinamento Matrimoni - BrightOlive"
    description="ðŸŽ¯ Servizi completi di wedding planning: coordinamento il giorno delle nozze, pianificazione totale e consulenza personalizzata. Matrimoni indimenticabili nel Veneto."
    image="/og-image.jpg"
>
    <!-- Hero Section -->
    <section class="py-24 lg:py-32 bg-neutral">
        <div class="container mx-auto px-8 lg:px-16">
            <div class="max-w-4xl mx-auto text-center">
                <!-- Label -->
                <div class="flex items-center justify-center mb-6 fade-in">
                    <div class="w-16 h-px bg-primary"></div>
                    <span class="mx-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light">
                        {t("services_page_hero_label")}
                    </span>
                    <div class="w-16 h-px bg-primary"></div>
                </div>

                <!-- Titolo -->
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-gray-900 mb-4 leading-tight fade-in fade-in-delay-1">
                    {t("services_page_hero_title")} <br />
                    <span class="text-primary italic">{t("services_page_hero_subtitle")}</span>
                </h1>

                <!-- Descrizione -->
                <p class="text-lg md:text-xl font-light text-gray-600 leading-relaxed fade-in fade-in-delay-2">
                    {t("services_page_hero_text")}
                </p>
            </div>
        </div>
    </section>

    <!-- Services Detail Sections -->
    {services.map((service, index) => (
        <section class={`py-24 lg:py-32 ${index % 2 === 0 ? 'bg-white' : 'bg-neutral'}`}>
            <div class="container mx-auto px-8 lg:px-16">
                <div class={`grid lg:grid-cols-12 gap-12 lg:gap-16 items-start ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
                    <!-- Colonna Info -->
                    <div class={`lg:col-span-7 ${index % 2 === 1 ? 'lg:col-start-6' : ''} fade-in`}>
                        <!-- Numero decorativo -->
                        <div class="text-[140px] lg:text-[180px] font-light text-primary/5 leading-none mb-[-60px]">
                            {service.number}
                        </div>

                        <!-- Titolo servizio -->
                        <h2 class="text-4xl md:text-5xl font-light text-gray-900 mb-3">
                            {t(service.nameKey)}
                        </h2>

                        <!-- Tagline -->
                        <p class="text-xl font-light text-primary italic mb-8">
                            {t(service.taglineKey)}
                        </p>

                        <!-- Separatore -->
                        <div class="flex items-center mb-8">
                            <div class="w-12 h-px bg-primary"></div>
                            <div class="mx-3 w-1 h-1 rounded-full bg-primary"></div>
                            <div class="w-12 h-px bg-primary"></div>
                        </div>

                        <!-- Intro -->
                        <p class="text-base md:text-lg font-light text-gray-600 leading-relaxed mb-6">
                            {t(service.introKey)}
                        </p>

                        <!-- Per chi Ã¨ ideale -->
                        <div class="bg-primary/5 border-l-2 border-primary p-6 mb-10">
                            <p class="text-sm font-normal text-gray-700 leading-relaxed">
                                <strong class="text-primary">Per chi Ã¨ ideale:</strong> {t(service.idealKey)}
                            </p>
                        </div>

                        <!-- Cosa Include -->
                        <h3 class="text-2xl font-light text-gray-900 mb-6">
                            {t(service.whatLabelKey)}
                        </h3>

                        <div class="space-y-4 mb-10">
                            {service.includeKeys.map((key: string) => (
                                <div class="flex items-start">
                                    <div class="shrink-0 w-6 h-6 rounded-full bg-primary flex items-center justify-center mt-0.5">
                                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    </div>
                                    <p class="ml-4 text-base font-light text-gray-700 leading-relaxed">
                                        {t(key)}
                                    </p>
                                </div>
                            ))}
                        </div>
                    </div>

                    <!-- Colonna Come Funziona -->
                    <div class={`lg:col-span-5 ${index % 2 === 1 ? 'lg:col-start-1 lg:row-start-1' : ''} fade-in fade-in-delay-1`}>
                        <div class="sticky top-8">
                            <!-- Card Come Funziona -->
                            <div class="bg-white p-8 lg:p-10 shadow-lg">
                                <h3 class="text-2xl font-light text-gray-900 mb-8">
                                    {t(service.howLabelKey)}
                                </h3>

                                <div class="space-y-8">
                                    {service.stepsKeys.map((key: string, stepIndex: number) => (
                                        <div class="flex items-start">
                                            <div class="shrink-0">
                                                <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
                                                    <span class="text-lg font-light text-primary">
                                                        {(stepIndex + 1).toString().padStart(2, '0')}
                                                    </span>
                                                </div>
                                            </div>
                                            <p class="ml-4 mt-2 text-base font-light text-gray-700 leading-relaxed">
                                                {t(key)}
                                            </p>
                                        </div>
                                    ))}
                                </div>

                                <!-- CTA in card -->
                                <div class="mt-10 pt-8 border-t border-gray-200">
                                    <a
                                        href={langPrefix + "/contatti"}
                                        class="block text-center px-8 py-3 bg-primary text-white text-sm font-light tracking-wider uppercase hover:bg-secondary transition-all duration-300"
                                    >
                                        Richiedi Info
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    ))}

    <!-- Sezione Processo -->
    <section class="py-24 lg:py-32 bg-primary text-white relative overflow-hidden">
        <!-- Pattern decorativo -->
        <div class="absolute inset-0 opacity-5">
            <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <pattern id="process-pattern" x="0" y="0" width="60" height="60" patternUnits="userSpaceOnUse">
                        <circle cx="30" cy="30" r="1.5" fill="white"></circle>
                    </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#process-pattern)"></rect>
            </svg>
        </div>

        <div class="container mx-auto px-8 lg:px-16 relative">
            <!-- Header -->
            <div class="text-center mb-16 fade-in">
                <div class="flex items-center justify-center mb-6">
                    <div class="w-16 h-px bg-white/40"></div>
                    <span class="mx-4 text-xs tracking-[0.4em] uppercase font-light">
                        {t("services_page_process_label")}
                    </span>
                    <div class="w-16 h-px bg-white/40"></div>
                </div>

                <h2 class="text-4xl md:text-5xl font-light mb-4">
                    {t("services_page_process_title")}
                </h2>
            </div>

            <!-- Steps Grid -->
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
                {[1, 2, 3, 4].map((step) => (
                    <div class={`text-center fade-in fade-in-delay-${step}`}>
                        <!-- Numero grande -->
                        <div class="text-7xl font-light text-white/20 mb-4">
                            {step.toString().padStart(2, '0')}
                        </div>

                        <!-- Titolo -->
                        <h3 class="text-xl font-light mb-4">
                            {t(`services_page_process_${step}_title`)}
                        </h3>

                        <!-- Separatore -->
                        <div class="flex items-center justify-center mb-4">
                            <div class="w-8 h-px bg-white/30"></div>
                            <div class="mx-2 w-1 h-1 rounded-full bg-white/50"></div>
                            <div class="w-8 h-px bg-white/30"></div>
                        </div>

                        <!-- Descrizione -->
                        <p class="text-sm font-light text-white/90 leading-relaxed">
                            {t(`services_page_process_${step}_text`)}
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- CTA Finale -->
    <section class="py-24 lg:py-32 bg-white">
        <div class="container mx-auto px-8 lg:px-16">
            <div class="max-w-3xl mx-auto text-center fade-in">
                <div class="flex items-center justify-center mb-8">
                    <div class="w-16 h-px bg-primary"></div>
                    <div class="mx-4 w-1.5 h-1.5 rounded-full bg-primary"></div>
                    <div class="w-16 h-px bg-primary"></div>
                </div>

                <h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-6">
                    {t("services_page_cta_title")}
                </h2>

                <p class="text-lg font-light text-gray-600 leading-relaxed mb-10">
                    {t("services_page_cta_text")}
                </p>

                <a
                    href={langPrefix + "/contatti"}
                    class="inline-flex items-center justify-center px-10 py-4 bg-primary text-white text-sm font-light tracking-wider uppercase hover:bg-secondary transition-all duration-300"
                >
                    {t("services_page_cta_button")}
                </a>
            </div>
        </div>
    </section>
</BaseLayout>

