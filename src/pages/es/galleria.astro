---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getGalleryPage, getLocalized, getImageUrl, type Language } from "../../lib/sanity";

const lang: Language = "es";
const galleryPage = await getGalleryPage();

const getText = (field: any, fallback: string = "") => {
  if (!field) return fallback;
  return getLocalized(field, lang) || fallback;
};

const heroLabel = getText(galleryPage?.heroLabel, "Portfolio");
const heroTitle = getText(galleryPage?.heroTitle, "Galería");
const heroSubtitle = getText(galleryPage?.heroSubtitle, "");
const heroText = getText(galleryPage?.heroText, "Una selección de atmósferas, detalles y decoraciones que reflejan mi estilo.");

const galleryImages = (galleryPage?.images || []).map((img, i) => ({
  src: getImageUrl(img, 800),
  alt: `Boda ${i + 1}`,
}));

// Fallback se non ci sono immagini in Sanity
const fallbackImages = galleryImages.length > 0 ? galleryImages : Array.from({ length: 20 }, (_, i) => ({
  src: `/gallery/gallery-${i + 1}.jpg`,
  alt: `Boda ${i + 1}`,
}));
---

<BaseLayout title={heroTitle} description={heroText}>

  <!-- Hero Section -->
  <section class="relative py-20 lg:py-32 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Label -->
        <div class="flex items-center justify-center mb-6">
          <div class="w-16 h-px bg-primary"></div>
          <span
            class="mx-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
          >
            {heroLabel}
          </span>
          <div class="w-16 h-px bg-primary"></div>
        </div>

        <!-- Title -->
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-light text-gray-900 mb-6"
        >
          {heroTitle}
          {heroSubtitle && <><br /><span class="text-primary italic">{heroSubtitle}</span></>}
        </h1>

        <!-- Description -->
        <p class="text-lg md:text-xl font-light text-gray-600 max-w-2xl mx-auto">
          {heroText}
        </p>
      </div>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-8 lg:px-16">
      <!-- Masonry Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          fallbackImages.map((image, index) => (
            <div
              class="group relative overflow-hidden rounded-lg aspect-4/5 bg-gray-100 cursor-pointer hover:shadow-2xl transition-all duration-500"
              style={`animation-delay: ${index * 50}ms`}
            >
              <img
                src={image.src}
                alt={image.alt}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />
              
              <!-- Overlay on hover -->
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/20 transition-all duration-500" />
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-6">
          ¿Quieres que tu boda sea la próxima?
        </h2>
        <p class="text-lg font-light text-gray-600 mb-8">
          Escríbeme y creemos juntos una experiencia inolvidable.
        </p>
        <a
          href="/es/contatti"
          class="inline-flex items-center justify-center px-10 py-4 bg-primary text-white text-sm font-light tracking-wider uppercase hover:bg-[#6d7a5e] transition-all duration-300"
        >
          Escríbeme
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Fade in animation for gallery items */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .grid > div {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }
</style>
