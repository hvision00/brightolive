---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getTranslation } from "../../i18n/translations";

const lang = "es";
const t = (key: any) => getTranslation(lang, key);
---

<BaseLayout
  title="Contacto | BrightOlive Wedding Planner Nord Italia"
  description="Contacta BrightOlive para organizar il tuo matrimonio da sogno nel Nord Italia. Consulenza gratuita e preventivo personalizzato entro 24 ore."
>
  <!-- Hero Section -->
  <section class="py-24 lg:py-32 bg-white">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Label -->
        <div class="flex items-center justify-center mb-6 fade-in">
          <div class="w-16 h-px bg-primary"></div>
          <span
            class="mx-4 text-xs tracking-[0.4em] text-gray-600 uppercase font-light"
          >
            {t("contact_page_hero_label")}
          </span>
          <div class="w-16 h-px bg-primary"></div>
        </div>

        <!-- Titolo -->
        <h1
          class="text-5xl md:text-6xl lg:text-7xl font-light text-gray-900 mb-4 leading-tight fade-in fade-in-delay-1"
        >
          {t("contact_page_hero_title")}
          <br />
          <span class="text-primary italic"
            >{t("contact_page_hero_subtitle")}</span
          >
        </h1>

        <!-- Descrizione -->
        <p
          class="text-lg md:text-xl font-light text-gray-600 leading-relaxed fade-in fade-in-delay-2"
        >
          {t("contact_page_hero_text")}
        </p>
      </div>
    </div>
  </section>

  <!-- Form + Info Section -->
  <section class="py-16 lg:py-24 bg-neutral">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="grid lg:grid-cols-12 gap-12 lg:gap-16 max-w-7xl mx-auto">
        <!-- Form Column (piÃ¹ largo) -->
        <div class="lg:col-span-7 fade-in">
          <div class="bg-white p-8 lg:p-12 shadow-lg">
            <h2 class="text-3xl font-light text-gray-900 mb-8">
              {t("contact_form_title")}
            </h2>

            <form class="space-y-6">
              <!-- Nome e Cognome -->
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label
                    for="name"
                    class="block text-sm font-light text-gray-700 mb-2"
                  >
                    {t("contact_form_name")} *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary transition-colors font-light text-gray-900"
                  />
                </div>
                <div>
                  <label
                    for="surname"
                    class="block text-sm font-light text-gray-700 mb-2"
                  >
                    {t("contact_form_surname")} *
                  </label>
                  <input
                    type="text"
                    id="surname"
                    name="surname"
                    required
                    class="w-full px-4 py-3 border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary transition-colors font-light text-gray-900"
                  />
                </div>
              </div>

              <!-- Email e Telefono -->
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label
                    for="email"
                    class="block text-sm font-light text-gray-700 mb-2"
                  >
                    {t("contact_form_email")} *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary transition-colors font-light text-gray-900"
                  />
                </div>
                <div>
                  <label
                    for="phone"
                    class="block text-sm font-light text-gray-700 mb-2"
                  >
                    {t("contact_form_phone")}
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary transition-colors font-light text-gray-900"
                  />
                </div>
              </div>

              <!-- Data Matrimonio e Servizio -->
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label
                    for="date"
                    class="block text-sm font-light text-gray-700 mb-2"
                  >
                    {t("contact_form_date")}
                  </label>
                  <input
                    type="date"
                    id="date"
                    name="date"
                    class="w-full px-4 py-3 border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary transition-colors font-light text-gray-900"
                  />
                </div>
                <div>
                  <label
                    for="service"
                    class="block text-sm font-light text-gray-700 mb-2"
                  >
                    {t("contact_form_service")}
                  </label>
                  <select
                    id="service"
                    name="service"
                    class="w-full px-4 py-3 border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary transition-colors font-light text-gray-900"
                  >
                    <option value="">{t("contact_form_select_service")}</option>
                    <option value="coordinamento"
                      >{t("contact_form_service_coordinamento")}</option
                    >
                    <option value="full"
                      >{t("contact_form_service_full")}</option
                    >
                    <option value="consulenza"
                      >{t("contact_form_service_consulenza")}</option
                    >
                    <option value="altro"
                      >{t("contact_form_service_altro")}</option
                    >
                  </select>
                </div>
              </div>

              <!-- Messaggio -->
              <div>
                <label
                  for="message"
                  class="block text-sm font-light text-gray-700 mb-2"
                >
                  {t("contact_form_message")} *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  placeholder={t("contact_form_message_placeholder")}
                  class="w-full px-4 py-3 border border-gray-300 focus:border-primary focus:ring-1 focus:ring-primary transition-colors font-light text-gray-900 resize-none"
                ></textarea>
              </div>

              <!-- Privacy -->
              <div class="flex items-start">
                <input
                  type="checkbox"
                  id="privacy"
                  name="privacy"
                  required
                  class="mt-1 w-4 h-4 text-primary border-gray-300 focus:ring-primary"
                />
                <label
                  for="privacy"
                  class="ml-3 text-xs font-light text-gray-600 leading-relaxed"
                >
                  {t("contact_form_privacy")}
                </label>
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full md:w-auto px-12 py-4 bg-primary text-white text-sm font-light tracking-wider uppercase hover:bg-secondary transition-all duration-300"
              >
                {t("contact_form_submit")}
              </button>
            </form>
          </div>
        </div>

        <!-- Info Column -->
        <div class="lg:col-span-5 space-y-8 fade-in fade-in-delay-1">
          <!-- Come Posso Aiutarti -->
          <div class="bg-white p-8 shadow-lg">
            <h3 class="text-2xl font-light text-gray-900 mb-4">
              {t("contact_page_info_title")}
            </h3>
            <p class="text-base font-light text-gray-600 leading-relaxed">
              {t("contact_page_info_text")}
            </p>
          </div>

          <!-- Cosa Succede Dopo -->
          <div class="bg-white p-8 shadow-lg">
            <h3 class="text-2xl font-light text-gray-900 mb-6">
              {t("contact_page_what_happens_title")}
            </h3>

            <div class="space-y-6">
              <!-- Step 1 -->
              <div class="flex items-start">
                <div
                  class="shrink-0 w-10 h-10 bg-primary/10 flex items-center justify-center"
                >
                  <span class="text-primary font-light text-lg">1</span>
                </div>
                <div class="ml-4">
                  <h4 class="text-base font-normal text-gray-900 mb-1">
                    {t("contact_page_what_happens_1_title")}
                  </h4>
                  <p class="text-sm font-light text-gray-600 leading-relaxed">
                    {t("contact_page_what_happens_1_text")}
                  </p>
                </div>
              </div>

              <!-- Step 2 -->
              <div class="flex items-start">
                <div
                  class="shrink-0 w-10 h-10 bg-primary/10 flex items-center justify-center"
                >
                  <span class="text-primary font-light text-lg">2</span>
                </div>
                <div class="ml-4">
                  <h4 class="text-base font-normal text-gray-900 mb-1">
                    {t("contact_page_what_happens_2_title")}
                  </h4>
                  <p class="text-sm font-light text-gray-600 leading-relaxed">
                    {t("contact_page_what_happens_2_text")}
                  </p>
                </div>
              </div>

              <!-- Step 3 -->
              <div class="flex items-start">
                <div
                  class="shrink-0 w-10 h-10 bg-primary/10 flex items-center justify-center"
                >
                  <span class="text-primary font-light text-lg">3</span>
                </div>
                <div class="ml-4">
                  <h4 class="text-base font-normal text-gray-900 mb-1">
                    {t("contact_page_what_happens_3_title")}
                  </h4>
                  <p class="text-sm font-light text-gray-600 leading-relaxed">
                    {t("contact_page_what_happens_3_text")}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Contatti Diretti -->
          <div class="bg-primary text-white p-8">
            <h3 class="text-xl font-light mb-6">
              {t("contact_page_details_title")}
            </h3>

            <div class="space-y-4">
              <!-- Email -->
              <div>
                <p class="text-xs uppercase tracking-wider opacity-80 mb-1">
                  {t("contact_page_details_email")}
                </p>
                <a
                  href="mailto:info@brightolive.it"
                  class="text-base font-light hover:opacity-80 transition-opacity"
                >
                  info@brightolive.it
                </a>
              </div>

              <!-- Telefono -->
              <div>
                <p class="text-xs uppercase tracking-wider opacity-80 mb-1">
                  {t("contact_page_details_phone")}
                </p>
                <a
                  href="tel:+393201234567"
                  class="text-base font-light hover:opacity-80 transition-opacity"
                >
                  +39 320 123 4567
                </a>
              </div>

              <!-- Social -->
              <div class="pt-4">
                <p class="text-xs uppercase tracking-wider opacity-80 mb-3">
                  {t("contact_page_details_social")}
                </p>
                <div class="flex space-x-4">
                  <a
                    href="https://instagram.com/brightolive"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:opacity-80 transition-opacity"
                  >
                    <svg
                      class="w-6 h-6"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
